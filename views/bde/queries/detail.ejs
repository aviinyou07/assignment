<section class="space-y-6">

  <!-- PAGE HEADER & STATUS -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-black text-slate-800">Query Details</h1>
      <p class="text-slate-500 mt-2">Query Code: <span class="font-mono font-semibold"><%= query.query_code %></span></p>
    </div>
    <span class="px-6 py-3 text-lg font-semibold rounded-full
      <% if (query.status === 1) { %>bg-blue-100 text-blue-700<% } %>
      <% if (query.status === 2) { %>bg-yellow-100 text-yellow-700<% } %>
      <% if (query.status === 3) { %>bg-orange-100 text-orange-700<% } %>
      <% if (query.status === 4) { %>bg-purple-100 text-purple-700<% } %>
      <% if (query.status === 5) { %>bg-red-100 text-red-700<% } %>
      <% if (query.status === 6) { %>bg-green-100 text-green-700<% } %>
    ">
      <% 
      const statusMap = {1: 'New', 2: 'Under Review', 3: 'Quotation Sent', 4: 'Awaiting Response', 5: 'Closed', 6: 'Confirmed'};
      %>
      <%= statusMap[query.status] %>
    </span>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <!-- QUERY DETAILS -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6 space-y-6">

        <!-- QUERY INFO -->
        <div>
          <h3 class="text-lg font-black text-slate-800 mb-4">Query Details</h3>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="text-sm text-slate-500 font-semibold uppercase mb-1">Topic</p>
              <p class="text-slate-800 font-semibold"><%= query.paper_topic %></p>
            </div>
            <div>
              <p class="text-sm text-slate-500 font-semibold uppercase mb-1">Deadline</p>
              <p class="text-slate-800 font-semibold"><%= new Date(query.deadline_at).toLocaleDateString() %></p>
            </div>
          </div>
        </div>

        <!-- CLIENT INFO -->
        <div class="border-t border-slate-200 pt-6">
          <h3 class="text-lg font-black text-slate-800 mb-4">Client Information</h3>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="text-sm text-slate-500 font-semibold uppercase mb-1">Name</p>
              <p class="text-slate-800 font-semibold"><%= query.full_name %></p>
            </div>
            <div>
              <p class="text-sm text-slate-500 font-semibold uppercase mb-1">Email</p>
              <p class="text-slate-800"><%= query.email %></p>
            </div>
            <div>
              <p class="text-sm text-slate-500 font-semibold uppercase mb-1">WhatsApp</p>
              <% if (query.whatsapp) { %>
                <a href="https://wa.me/<%= query.whatsapp.replace(/\D/g, '') %>" target="_blank" class="text-green-600 hover:underline font-semibold">
                  <i class="fi fi-brands-whatsapp"></i> <%= query.whatsapp %>
                </a>
              <% } else { %>
                <p class="text-slate-400">Not provided</p>
              <% } %>
            </div>
          </div>
        </div>

        <!-- QUOTATION SECTION -->
        <% if (quotation) { %>
          <div class="border-t border-slate-200 pt-6 bg-green-50 p-4 rounded-lg">
            <h3 class="text-lg font-black text-green-900 mb-4">Quotation (Generated)</h3>
            <div class="grid grid-cols-3 gap-4 mb-4">
              <div>
                <p class="text-sm text-green-700 font-semibold uppercase mb-1">Base Price</p>
                <p class="text-xl font-black text-green-900">$<%= quotation.base_price.toFixed(2) %></p>
              </div>
              <div>
                <p class="text-sm text-green-700 font-semibold uppercase mb-1">Discount</p>
                <p class="text-xl font-black text-green-900">-$<%= quotation.discount.toFixed(2) %></p>
              </div>
              <div>
                <p class="text-sm text-green-700 font-semibold uppercase mb-1">Final Price</p>
                <p class="text-xl font-black text-green-900">$<%= quotation.final_price.toFixed(2) %></p>
              </div>
            </div>
            <div>
              <p class="text-sm text-green-700 font-semibold uppercase mb-1">Notes</p>
              <p class="text-green-900"><%= quotation.notes || 'No notes' %></p>
            </div>
          </div>
        <% } else if (query.status >= 1 && query.status < 6) { %>
          <div class="border-t border-slate-200 pt-6 bg-blue-50 p-4 rounded-lg">
            <h3 class="text-lg font-black text-blue-900 mb-4">Generate Quotation</h3>
            <form id="quotationForm" enctype="multipart/form-data" class="space-y-4">
              <div class="grid grid-cols-3 gap-4">
                <div>
                  <label class="block text-sm font-semibold text-slate-700 mb-2">Base Price ($)</label>
                  <input type="number" name="basePrice" step="0.01" required class="w-full px-3 py-2 border border-slate-300 rounded-lg">
                </div>
                <div>
                  <label class="block text-sm font-semibold text-slate-700 mb-2">Discount ($)</label>
                  <input type="number" name="discount" step="0.01" value="0" class="w-full px-3 py-2 border border-slate-300 rounded-lg">
                </div>
                <div>
                  <label class="block text-sm font-semibold text-slate-700 mb-2">Final Price ($)</label>
                  <input type="number" name="finalPrice" step="0.01" required class="w-full px-3 py-2 border border-slate-300 rounded-lg">
                </div>
              </div>
              <div>
                <label class="block text-sm font-semibold text-slate-700 mb-2">Notes</label>
                <textarea name="notes" rows="3" class="w-full px-3 py-2 border border-slate-300 rounded-lg"></textarea>
              </div>
              <div>
                <label class="block text-sm font-semibold text-slate-700 mb-2">Quotation File (PDF/Word)</label>
                <input type="file" name="quotationFile" accept=".pdf,.doc,.docx" class="w-full px-3 py-2 border border-slate-300 rounded-lg">
              </div>
              <button type="submit" class="w-full px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-black">
                Generate & Send Quotation
              </button>
            </form>
          </div>
        <% } %>

      </div>
    </div>

    <!-- SIDEBAR: MESSAGES & ACTIONS -->
    <div class="space-y-6">

      <!-- QUICK ACTIONS -->
      <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
        <h3 class="text-lg font-black text-slate-800 mb-4">Actions</h3>
        <div class="space-y-2">
          <a href="https://wa.me/<%= query.whatsapp ? query.whatsapp.replace(/\D/g, '') : '' %>" target="_blank" class="w-full block text-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 font-semibold">
            <i class="fi fi-brands-whatsapp"></i> Chat with Client
          </a>
          <button onclick="showMessageModal()" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold">
            <i class="fi fi-rr-comment"></i> Send Message
          </button>
          <% if (query.status < 3) { %>
            <button onclick="updateStatus(2)" class="w-full px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 font-semibold text-sm">
              Mark Under Review
            </button>
          <% } %>
        </div>
      </div>

      <!-- RECENT MESSAGES -->
      <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
        <h3 class="text-lg font-black text-slate-800 mb-4">Messages</h3>
        <div class="space-y-3 max-h-60 overflow-y-auto">
          <% if (messages && messages.length > 0) { %>
            <% messages.slice(0, 5).forEach(msg => { %>
              <div class="p-3 bg-slate-50 rounded-lg border border-slate-200">
                <p class="text-sm text-slate-700"><%= msg.message %></p>
                <p class="text-xs text-slate-400 mt-1"><%= new Date(msg.created_at).toLocaleDateString() %></p>
              </div>
            <% }); %>
          <% } else { %>
            <p class="text-center text-slate-400 py-6">No messages yet</p>
          <% } %>
        </div>
      </div>

      <!-- CHAT PANEL -->
      <% if (typeof query !== 'undefined' && query.query_code) { %>
      <%- include('../../partials/chat-panel', { 
        contextCode: query.query_code,
        contextType: 'query',
        recipientName: query.full_name,
        recipientRole: 'client'
      }) %>
      <% } %>

    </div>

  </div>

</section>

<script>
async function showMessageModal() {
  const message = await showInputModal('Send Message', 'Enter your message to the user', 'Type your message...');
  if (message) {
    fetch('/bde/queries/<%= query.query_code %>/message', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({message, recipientType: 'user'})
    }).then(r => r.json()).then(d => {
      showToast(d.message, 'success');
      location.reload();
    });
  }
}

function updateStatus(status) {
  fetch('/bde/queries/<%= query.query_code %>/status', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({newStatus: status})
  }).then(r => r.json()).then(d => {
    showToast(d.message, 'success');
    location.reload();
  });
}

document.getElementById('quotationForm')?.addEventListener('submit', async (e) => {
  e.preventDefault();
  const formData = new FormData(e.target);
  const resp = await fetch('/bde/queries/<%= query.query_code %>/quotation', {
    method: 'POST',
    body: formData
  });
  const data = await resp.json();
  showToast(data.message, data.success ? 'success' : 'error');
  location.reload();
});
</script>
