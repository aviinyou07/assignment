<%- include('../../partials/head.ejs') %>

<section class="space-y-6">

  <!-- PAGE HEADER -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-black text-slate-800">Order Details</h1>
      <p class="text-slate-500 mt-2">Work Code: <span class="font-mono font-semibold"><%= order.work_code %></span></p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <!-- MAIN DETAILS -->
    <div class="lg:col-span-2 space-y-6">

      <!-- ORDER INFO -->
      <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
        <h3 class="text-lg font-black text-slate-800 mb-4">Order Information</h3>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-slate-500 font-semibold uppercase mb-1">Topic</p>
            <p class="text-slate-800 font-semibold"><%= order.paper_topic %></p>
          </div>
          <div>
            <p class="text-sm text-slate-500 font-semibold uppercase mb-1">Deadline</p>
            <p class="text-slate-800 font-semibold"><%= new Date(order.deadline_at).toLocaleDateString() %></p>
          </div>
          <div>
            <p class="text-sm text-slate-500 font-semibold uppercase mb-1">Price</p>
            <p class="text-2xl font-black text-green-600">$<%= order.total_price_usd.toFixed(2) %></p>
          </div>
          <div>
            <p class="text-sm text-slate-500 font-semibold uppercase mb-1">Payment Status</p>
            <span class="px-3 py-1 text-sm font-semibold rounded-full inline-block
              <% if (order.payment_status === 'pending') { %>bg-red-100 text-red-700<% } %>
              <% if (order.payment_status === 'partial') { %>bg-yellow-100 text-yellow-700<% } %>
              <% if (order.payment_status === 'completed') { %>bg-green-100 text-green-700<% } %>
            ">
              <%= order.payment_status %>
            </span>
          </div>
        </div>
      </div>

      <!-- TASK PROGRESS -->
      <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
        <h3 class="text-lg font-black text-slate-800 mb-4">Task Progress</h3>
        
        <% if (tasks && tasks.length > 0) { %>
          <div class="space-y-4">
            <% tasks.forEach(task => { %>
              <div class="p-4 bg-slate-50 rounded-lg border border-slate-200">
                <div class="flex items-start justify-between mb-2">
                  <div>
                    <p class="font-semibold text-slate-800"><%= task.task_title || 'Task ' + task.task_id %></p>
                    <p class="text-sm text-slate-500 mt-1">Status: <%= task.status %></p>
                  </div>
                  <span class="px-3 py-1 text-xs font-semibold rounded-full
                    <% if (task.status === 'pending') { %>bg-blue-100 text-blue-700<% } %>
                    <% if (task.status === 'in-progress') { %>bg-yellow-100 text-yellow-700<% } %>
                    <% if (task.status === 'completed') { %>bg-green-100 text-green-700<% } %>
                  ">
                    <%= task.status %>
                  </span>
                </div>
                <% if (task.description) { %>
                  <p class="text-sm text-slate-600 mt-2"><%= task.description %></p>
                <% } %>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="text-center text-slate-400 py-6">No tasks yet</p>
        <% } %>
      </div>

      <!-- SUBMISSIONS & QC -->
      <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
        <h3 class="text-lg font-black text-slate-800 mb-4">Submissions & QC</h3>
        
        <% if (submissions && submissions.length > 0) { %>
          <div class="space-y-4">
            <% submissions.forEach((sub, idx) => { %>
              <div class="p-4 border-l-4 rounded-lg
                <% if (sub.status === 'draft' && !sub.qc_status) { %>border-blue-500 bg-blue-50<% } %>
                <% if (sub.qc_status === 'approved') { %>border-green-500 bg-green-50<% } %>
                <% if (sub.qc_status === 'rejected') { %>border-red-500 bg-red-50<% } %>
              ">
                <div class="flex items-start justify-between">
                  <div>
                    <p class="font-semibold text-slate-800">Submission <%= idx + 1 %></p>
                    <p class="text-sm text-slate-600 mt-1">Status: <%= sub.status %></p>
                    <% if (sub.qc_status) { %>
                      <p class="text-sm text-slate-600">QC: <%= sub.qc_status %></p>
                    <% } %>
                  </div>
                  <span class="px-3 py-1 text-xs font-semibold rounded-full
                    <% if (sub.status === 'draft' && !sub.qc_status) { %>bg-blue-100 text-blue-700<% } %>
                    <% if (sub.qc_status === 'approved') { %>bg-green-100 text-green-700<% } %>
                    <% if (sub.qc_status === 'rejected') { %>bg-red-100 text-red-700<% } %>
                  ">
                    <%= sub.qc_status ? sub.qc_status : 'Pending QC' %>
                  </span>
                </div>
                <% if (sub.feedback) { %>
                  <p class="text-sm text-slate-600 mt-2">Feedback: <%= sub.feedback %></p>
                <% } %>
                <div class="mt-3 text-xs text-slate-500">
                  Submitted: <%= new Date(sub.created_at).toLocaleDateString() %>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="text-center text-slate-400 py-6">No submissions yet</p>
        <% } %>
      </div>

      <!-- DELIVERY STATUS -->
      <% if (delivery) { %>
        <div class="bg-gradient-to-r from-green-50 to-green-100 rounded-2xl border border-green-300 shadow-sm p-6">
          <h3 class="text-lg font-black text-green-900 mb-4"><i class="fi fi-rr-check-circle"></i> Delivery Complete</h3>
          <div class="space-y-2">
            <p class="text-sm text-green-800">Delivered on: <%= new Date(delivery.created_at).toLocaleDateString() %></p>
            <% if (delivery.file_url) { %>
              <a href="<%= delivery.file_url %>" target="_blank" class="inline-block px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 font-semibold">
                <i class="fi fi-rr-download"></i> Download Final File
              </a>
            <% } %>
          </div>
        </div>
      <% } %>

    </div>

    <!-- SIDEBAR: CLIENT & ACTIONS -->
    <div class="space-y-6">

      <!-- CLIENT INFO -->
      <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
        <h3 class="text-lg font-black text-slate-800 mb-4">Client Details</h3>
        <div class="flex items-center gap-4 mb-4">
          <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center text-white font-black">
            <%= order.full_name.charAt(0) %>
          </div>
          <div>
            <p class="font-semibold text-slate-800"><%= order.full_name %></p>
            <p class="text-sm text-slate-500"><%= order.email %></p>
          </div>
        </div>
        <% if (order.whatsapp) { %>
          <a href="https://wa.me/<%= order.whatsapp.replace(/\D/g, '') %>" target="_blank" class="w-full block text-center px-3 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 font-semibold text-sm mt-3">
            <i class="fi fi-brands-whatsapp"></i> Chat
          </a>
        <% } %>
      </div>

      <!-- QUICK STATS -->
      <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
        <h3 class="text-lg font-black text-slate-800 mb-4">Status</h3>
        <div class="space-y-3">
          <div>
            <p class="text-sm text-slate-500 font-semibold mb-1">Payment</p>
            <div class="w-full bg-slate-200 rounded-full h-3">
              <div class="bg-green-500 h-3 rounded-full" style="width: <%= order.payment_status === 'completed' ? '100' : order.payment_status === 'partial' ? '50' : '0' %>%"></div>
            </div>
          </div>
          <div>
            <p class="text-sm text-slate-500 font-semibold mb-1">Completion</p>
            <div class="w-full bg-slate-200 rounded-full h-3">
              <div class="bg-blue-500 h-3 rounded-full" style="width: <%= tasks && tasks.length > 0 ? Math.round(tasks.filter(t => t.status === 'completed').length / tasks.length * 100) : 0 %>%"></div>
            </div>
          </div>
          <div>
            <p class="text-sm text-slate-500 font-semibold mb-1">QC Approval</p>
            <div class="w-full bg-slate-200 rounded-full h-3">
              <div class="bg-purple-500 h-3 rounded-full" style="width: <%= submissions && submissions.filter(s => s.qc_status === 'approved').length > 0 ? '100' : '0' %>%"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- ACTIONS (READ-ONLY NOTICE) -->
      <div class="bg-amber-50 border border-amber-300 rounded-2xl p-4">
        <p class="text-sm text-amber-900 font-semibold">
          <i class="fi fi-rr-lock"></i> Read-only view
        </p>
        <p class="text-xs text-amber-700 mt-1">You cannot assign writers, approve QC, or mark as delivered. These actions are admin-only.</p>
      </div>

    </div>

  </div>

</section>
