<%- include('../../partials/head.ejs') %>

<section class="space-y-6">

  <!-- PAGE HEADER -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-black text-slate-800">Confirmed Orders</h1>
      <p class="text-slate-500 mt-2">Track payment verified orders and their progress</p>
    </div>
  </div>

  <!-- ORDERS TABLE -->
  <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="border-b border-slate-200 bg-slate-50">
            <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700">Work Code</th>
            <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700">Topic</th>
            <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700">Client</th>
            <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700">Price</th>
            <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700">Deadline</th>
            <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700">Payment</th>
            <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700">Tasks</th>
            <th class="px-6 py-4 text-left text-sm font-semibold text-slate-700">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% if (orders && orders.length > 0) { %>
            <% orders.forEach(order => { %>
              <tr class="hover:bg-slate-50 transition">
                <td class="px-6 py-4">
                  <span class="font-mono font-semibold text-slate-800"><%= order.work_code %></span>
                </td>
                <td class="px-6 py-4 text-slate-600">
                  <%= order.paper_topic.substring(0, 30) %>...
                </td>
                <td class="px-6 py-4">
                  <p class="font-semibold text-slate-800"><%= order.full_name %></p>
                  <p class="text-sm text-slate-500"><%= order.email %></p>
                </td>
                <td class="px-6 py-4 font-bold text-slate-800">
                  $<%= order.total_price_usd.toFixed(2) %>
                </td>
                <td class="px-6 py-4 text-slate-600 text-sm">
                  <%= new Date(order.deadline_at).toLocaleDateString() %>
                </td>
                <td class="px-6 py-4">
                  <span class="px-3 py-1 text-xs font-semibold rounded-full
                    <% if (order.payment_status === 'pending') { %>bg-red-100 text-red-700<% } %>
                    <% if (order.payment_status === 'partial') { %>bg-yellow-100 text-yellow-700<% } %>
                    <% if (order.payment_status === 'completed') { %>bg-green-100 text-green-700<% } %>
                  ">
                    <%= order.payment_status %>
                  </span>
                </td>
                <td class="px-6 py-4 text-center font-semibold text-slate-800">
                  <%= order.completed_tasks %>/<%= order.task_count %>
                </td>
                <td class="px-6 py-4">
                  <a href="/bde/orders/<%= order.work_code %>" class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 font-semibold">
                    View
                  </a>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="8" class="px-6 py-12 text-center text-slate-400">
                <i class="fi fi-rr-briefcase text-4xl block mb-2"></i>
                <p>No confirmed orders yet</p>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- PAGINATION -->
  <% if (pagination && pagination.total > 1) { %>
    <div class="flex justify-center gap-2">
      <% for (let i = 1; i <= pagination.total; i++) { %>
        <% if (i === pagination.current) { %>
          <span class="px-4 py-2 bg-blue-600 text-white rounded-lg font-semibold"><%= i %></span>
        <% } else { %>
          <a href="/bde/orders?page=<%= i %>" class="px-4 py-2 bg-slate-200 text-slate-800 rounded-lg hover:bg-slate-300 font-semibold">
            <%= i %>
          </a>
        <% } %>
      <% } %>
    </div>
  <% } %>

</section>
