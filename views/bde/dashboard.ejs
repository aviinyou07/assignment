<section class="space-y-6">

  <!-- WELCOME CARD -->
  <div class="bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl p-8 text-white shadow-lg">
    <h1 class="text-4xl font-black mb-2">
      Welcome, <%= typeof profile !== 'undefined' && profile.full_name ? profile.full_name.split(' ')[0] : 'BDE' %>! ðŸ‘‹
    </h1>
    <p class="text-blue-100 text-lg">Manage queries, quotations, and client relationships</p>
  </div>

  <!-- FILTER CONTROLS -->
  <div class="flex gap-4 items-center bg-white p-4 rounded-lg border border-slate-200">
    <label class="text-sm font-semibold text-slate-600">Date Filter:</label>
    <select id="dateFilter" class="px-3 py-2 border border-slate-300 rounded-lg text-sm">
      <option value="today" <%= dateFilter === 'today' ? 'selected' : '' %>>Today</option>
      <option value="week" <%= dateFilter === 'week' ? 'selected' : '' %>>This Week</option>
      <option value="month" <%= dateFilter === 'month' ? 'selected' : '' %>>This Month</option>
    </select>
    <button onclick="applyFilter()" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold">Apply</button>
  </div>

  <!-- KPI CARDS GRID -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <!-- KPI 1: New Queries -->
    <a href="/bde/queries?status=new" class="block transform hover:scale-105 transition">
      <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm hover:shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-slate-500 text-sm font-semibold mb-1">New Queries (Today)</p>
            <p class="text-4xl font-black text-blue-600"><%= kpis.newQueries %></p>
            <p class="text-xs text-slate-400 mt-2">Click to view</p>
          </div>
          <i class="fi fi-rr-document text-5xl text-blue-200"></i>
        </div>
      </div>
    </a>

    <!-- KPI 2: Pending Quotations -->
    <a href="/bde/queries?status=quotation_sent" class="block transform hover:scale-105 transition">
      <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm hover:shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-slate-500 text-sm font-semibold mb-1">Pending Quotations</p>
            <p class="text-4xl font-black text-orange-600"><%= kpis.pendingQuotations %></p>
            <p class="text-xs text-slate-400 mt-2">Awaiting client response</p>
          </div>
          <i class="fi fi-rr-file-invoice text-5xl text-orange-200"></i>
        </div>
      </div>
    </a>

    <!-- KPI 3: Confirmed Orders -->
    <a href="/bde/orders" class="block transform hover:scale-105 transition">
      <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm hover:shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-slate-500 text-sm font-semibold mb-1">Confirmed Orders</p>
            <p class="text-4xl font-black text-green-600"><%= kpis.confirmedOrders %></p>
            <p class="text-xs text-slate-400 mt-2">This month</p>
          </div>
          <i class="fi fi-rr-checkbox text-5xl text-green-200"></i>
        </div>
      </div>
    </a>

    <!-- KPI 4: Total Revenue -->
    <a href="/bde/orders" class="block transform hover:scale-105 transition">
      <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm hover:shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-slate-500 text-sm font-semibold mb-1">Total Revenue</p>
            <p class="text-4xl font-black text-purple-600">$<%= kpis.totalRevenue.toFixed(2) %></p>
            <p class="text-xs text-slate-400 mt-2">This month</p>
          </div>
          <i class="fi fi-rr-dollar text-5xl text-purple-200"></i>
        </div>
      </div>
    </a>

    <!-- KPI 5: Pending Payments -->
    <a href="/bde/payments" class="block transform hover:scale-105 transition">
      <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm hover:shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-slate-500 text-sm font-semibold mb-1">Pending Payments</p>
            <p class="text-4xl font-black text-red-600"><%= kpis.pendingPayments %></p>
            <p class="text-xs text-slate-400 mt-2">Awaiting client payment</p>
          </div>
          <i class="fi fi-rr-credit-card text-5xl text-red-200"></i>
        </div>
      </div>
    </a>

    <!-- KPI 6: Drafts Awaiting Approval -->
    <a href="/bde/orders" class="block transform hover:scale-105 transition">
      <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm hover:shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-slate-500 text-sm font-semibold mb-1">Drafts Awaiting Approval</p>
            <p class="text-4xl font-black text-indigo-600"><%= kpis.draftsAwaitingApproval %></p>
            <p class="text-xs text-slate-400 mt-2">Admin approval pending</p>
          </div>
          <i class="fi fi-rr-document text-5xl text-indigo-200"></i>
        </div>
      </div>
    </a>

  </div>

  <!-- QUICK ACTIONS -->
  <div class="bg-white p-8 rounded-2xl border border-slate-200 shadow-sm">
    <h3 class="text-lg font-black text-slate-800 mb-6">Quick Actions</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <a href="/bde/clients" class="p-4 bg-gradient-to-br from-blue-50 to-blue-100 border border-blue-200 rounded-lg hover:from-blue-100 hover:to-blue-200 transition">
        <i class="fi fi-rr-user text-2xl text-blue-600 block mb-2"></i>
        <p class="font-semibold text-blue-900">Manage Clients</p>
        <p class="text-sm text-blue-700">View assigned clients</p>
      </a>
      <a href="/bde/queries" class="p-4 bg-gradient-to-br from-green-50 to-green-100 border border-green-200 rounded-lg hover:from-green-100 hover:to-green-200 transition">
        <i class="fi fi-rr-document text-2xl text-green-600 block mb-2"></i>
        <p class="font-semibold text-green-900">View Queries</p>
        <p class="text-sm text-green-700">Create quotations</p>
      </a>
      <a href="/bde/payments" class="p-4 bg-gradient-to-br from-purple-50 to-purple-100 border border-purple-200 rounded-lg hover:from-purple-100 hover:to-purple-200 transition">
        <i class="fi fi-rr-credit-card text-2xl text-purple-600 block mb-2"></i>
        <p class="font-semibold text-purple-900">Payment Tracking</p>
        <p class="text-sm text-purple-700">Send reminders</p>
      </a>
    </div>
  </div>

  <!-- KEY METRICS SUMMARY -->
  <div class="bg-gradient-to-r from-slate-50 to-slate-100 p-8 rounded-2xl border border-slate-200">
    <h3 class="text-lg font-black text-slate-800 mb-4">Performance Summary</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div>
        <p class="text-sm text-slate-600 mb-2">Conversion Rate</p>
        <div class="flex items-center gap-2">
          <div class="flex-1 bg-white rounded-full h-2 border border-slate-300">
            <div class="bg-green-500 h-2 rounded-full" style="width: <%= kpis.pendingQuotations > 0 ? (kpis.confirmedOrders / (kpis.pendingQuotations + kpis.confirmedOrders) * 100) : 0 %>%"></div>
          </div>
          <span class="font-bold text-sm"><%= kpis.pendingQuotations > 0 ? ((kpis.confirmedOrders / (kpis.pendingQuotations + kpis.confirmedOrders) * 100).toFixed(0)) : 0 %>%</span>
        </div>
      </div>
      <div>
        <p class="text-sm text-slate-600 mb-2">Payment Collection</p>
        <div class="flex items-center gap-2">
          <div class="flex-1 bg-white rounded-full h-2 border border-slate-300">
            <div class="bg-blue-500 h-2 rounded-full" style="width: <%= kpis.confirmedOrders > 0 ? (100 - (kpis.pendingPayments / kpis.confirmedOrders * 100)) : 100 %>%"></div>
          </div>
          <span class="font-bold text-sm"><%= kpis.confirmedOrders > 0 ? (100 - (kpis.pendingPayments / kpis.confirmedOrders * 100)).toFixed(0) : 100 %>%</span>
        </div>
      </div>
      <div>
        <p class="text-sm text-slate-600 mb-2">Order Completion</p>
        <div class="flex items-center gap-2">
          <div class="flex-1 bg-white rounded-full h-2 border border-slate-300">
            <div class="bg-purple-500 h-2 rounded-full" style="width: <%= (100 - (kpis.draftsAwaitingApproval / (kpis.confirmedOrders || 1) * 100)).toFixed(0) %>%"></div>
          </div>
          <span class="font-bold text-sm"><%= (100 - (kpis.draftsAwaitingApproval / (kpis.confirmedOrders || 1) * 100)).toFixed(0) %>%</span>
        </div>
      </div>
    </div>
  </div>

</section>

<script>
function applyFilter() {
  const filter = document.getElementById('dateFilter').value;
  window.location.href = `/bde/?dateFilter=${filter}`;
}
</script>
