function closeQCModal() {
  document.getElementById('qcModal').classList.add('hidden');
}

// Quick approve without modal
async function quickApprove(submissionId) {
  const confirmed = await showConfirmModal(
    'Quick Approve',
    'Are you sure you want to approve this submission? It will be sent for delivery.',
    'success'
  );
  
  if (!confirmed) return;
  approveSubmission(submissionId);
}

// Approve Submission
async function approveSubmission(submissionId) {
  const feedback = document.getElementById('qcFeedback')?.value || 'Approved - Quality standards met.';
  
  try {
    const response = await fetch(`/admin/qc/${submissionId}/approve`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ feedback })
    });
    
    const data = await response.json();
    if (data.success) {
      showToast('Submission approved! Sent for delivery.', 'success');
      setTimeout(() => location.reload(), 1000);
    } else {
      showToast('Error: ' + data.error, 'error');
    }
  } catch (error) {
    console.error('Error approving submission:', error);
    showToast('An error occurred', 'error');
  }
}

// Open reject modal
function openRejectModal(submissionId) {
  currentSubmissionId = submissionId;
  document.getElementById('rejectFeedback').value = '';
  document.getElementById('rejectModal').classList.remove('hidden');
  closeQCModal();
}

function closeRejectModal() {
  document.getElementById('rejectModal').classList.add('hidden');
  currentSubmissionId = null;
}

// Submit rejection
async function submitRejection() {
  const feedback = document.getElementById('rejectFeedback').value.trim();
  
  if (!feedback) {
    showToast('Please provide feedback for the writer', 'warning');
    return;
  }
  
  try {
    const response = await fetch(`/admin/qc/${currentSubmissionId}/reject`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ feedback })
    });
    
    const data = await response.json();
    if (data.success) {
      showToast('Revision requested. Writer notified.', 'success');
      closeRejectModal();
      setTimeout(() => location.reload(), 1000);
    } else {
      showToast('Error: ' + data.error, 'error');
    }
  } catch (error) {
    console.error('Error rejecting submission:', error);
    showToast('An error occurred', 'error');
  }
}

// Admin Force Approve
function adminForceApprove(submissionId) {
  currentSubmissionId = submissionId;
  document.getElementById('forceApproveReason').value = '';
  document.getElementById('forceApproveModal').classList.remove('hidden');
}

function closeForceApproveModal() {
  document.getElementById('forceApproveModal').classList.add('hidden');
  currentSubmissionId = null;
}

async function submitForceApprove() {
  const reason = document.getElementById('forceApproveReason').value.trim();
  
  if (!reason) {
    showToast('Please provide justification for force approval', 'warning');
    return;
  }
  
  try {
    const response = await fetch(`/admin/qc/${currentSubmissionId}/force-approve`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ reason, override: true })
    });
    
    const data = await response.json();
    if (data.success) {
      showToast('Submission force approved by admin override.', 'success');
      closeForceApproveModal();
      setTimeout(() => location.reload(), 1000);
    } else {
      showToast('Error: ' + data.error, 'error');
    }
  } catch (error) {
    console.error('Error force approving:', error);
    showToast('An error occurred', 'error');
  }
}

// Bulk approve
async function bulkApproveSelected() {
  const checkedIds = Array.from(document.querySelectorAll('.submission-checkbox:checked')).map(cb => cb.value);
  
  if (checkedIds.length === 0) return;
  
  const confirmed = await showConfirmModal(
    'Bulk Approve',
    `Are you sure you want to approve ${checkedIds.length} submission(s)?`,
    'success'
  );
  
  if (!confirmed) return;
  
  // Process each submission
  let successCount = 0;
  for (const id of checkedIds) {
    try {
      const response = await fetch(`/admin/qc/${id}/approve`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ feedback: 'Bulk approved' })
      });
      const data = await response.json();
      if (data.success) successCount++;
    } catch (e) {
      console.error('Error approving', id, e);
    }
  }
  
  showToast(`${successCount}/${checkedIds.length} submissions approved`, 'success');
  setTimeout(() => location.reload(), 1000);
}

// Legacy function for backward compatibility
async function rejectSubmission(submissionId) {
  openRejectModal(submissionId);
}
