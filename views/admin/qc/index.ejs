<!-- PREMIUM QC INTERFACE -->
<section class="min-h-screen bg-gradient-to-b from-slate-50 to-slate-100/50 p-4 md:p-8">
  <div class="max-w-7xl mx-auto space-y-6">

    <!-- PREMIUM HEADER -->
    <div class="bg-gradient-to-r from-slate-900 via-indigo-900 to-violet-900 rounded-3xl p-8 shadow-xl relative overflow-hidden">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjAiIGhlaWdodD0iMjAiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PGNpcmNsZSBjeD0iMSIgY3k9IjEiIHI9IjEiIGZpbGw9InJnYmEoMjU1LDI1NSwyNTUsMC4wNSkiLz48L3N2Zz4=')] opacity-50"></div>
      
      <div class="relative flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <div class="w-12 h-12 rounded-xl bg-white/10 flex items-center justify-center">
              <i class="fi fi-rr-shield-check text-white text-xl"></i>
            </div>
            <h1 class="text-3xl font-black text-white">Quality Control Hub</h1>
          </div>
          <p class="text-indigo-200 text-sm">Review, score, and manage writer submissions</p>
        </div>

        <!-- STATS CARDS -->
        <div class="flex gap-4">
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl px-6 py-4 border border-white/10">
            <p class="text-indigo-200 text-xs font-semibold uppercase mb-1">Pending Review</p>
            <p class="text-4xl font-black text-white"><%= total %></p>
          </div>
          <div class="bg-amber-500/20 backdrop-blur-sm rounded-2xl px-6 py-4 border border-amber-400/30">
            <p class="text-amber-200 text-xs font-semibold uppercase mb-1">Urgent (<24h)</p>
            <p class="text-4xl font-black text-amber-400"><%= typeof urgentCount !== 'undefined' ? urgentCount : 0 %></p>
          </div>
          <div class="bg-emerald-500/20 backdrop-blur-sm rounded-2xl px-6 py-4 border border-emerald-400/30">
            <p class="text-emerald-200 text-xs font-semibold uppercase mb-1">Today Approved</p>
            <p class="text-4xl font-black text-emerald-400"><%= typeof todayApproved !== 'undefined' ? todayApproved : 0 %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- FILTERS & CONTROLS -->
    <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
      <form method="GET" action="/admin/qc/pending" class="flex flex-wrap items-end gap-4">
        <!-- Status Filter -->
        <div class="flex-1 min-w-[200px]">
          <label class="text-xs font-bold text-slate-600 mb-2 block uppercase tracking-wider">Status</label>
          <select name="status" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm font-medium bg-slate-50">
            <option value="pending_qc" <%= filters.status === 'pending_qc' ? 'selected' : '' %>>‚è≥ Pending QC</option>
            <option value="approved" <%= filters.status === 'approved' ? 'selected' : '' %>>‚úÖ Approved</option>
            <option value="revision_required" <%= filters.status === 'revision_required' ? 'selected' : '' %>>üîÑ Revision Required</option>
            <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>üìã All Submissions</option>
          </select>
        </div>

        <!-- Score Range Filter -->
        <div class="flex-1 min-w-[200px]">
          <label class="text-xs font-bold text-slate-600 mb-2 block uppercase tracking-wider">Quality Score</label>
          <select name="scoreRange" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm font-medium bg-slate-50">
            <option value="all">All Scores</option>
            <option value="excellent">üü¢ Excellent (90%+)</option>
            <option value="good">üü° Good (70-89%)</option>
            <option value="needsWork">üî¥ Needs Work (<70%)</option>
          </select>
        </div>

        <!-- Actions -->
        <div class="flex gap-2">
          <button type="submit" class="bg-indigo-600 text-white px-6 py-2.5 rounded-xl font-bold text-sm hover:bg-indigo-700 transition-all shadow-lg shadow-indigo-600/30 flex items-center gap-2">
            <i class="fi fi-rr-filter"></i>Filter
          </button>
          <a href="/admin/qc/pending" class="bg-slate-100 text-slate-600 px-4 py-2.5 rounded-xl font-bold text-sm hover:bg-slate-200 transition-all flex items-center gap-2">
            <i class="fi fi-rr-arrow-rotate-left"></i>Reset
          </a>
        </div>
      </form>
    </div>

    <!-- PREMIUM QC TABLE -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
      <!-- Table Header -->
      <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <span class="text-sm font-bold text-slate-700">Showing <%= records ? records.length : 0 %> submissions</span>
          <span class="text-xs text-slate-400">‚Ä¢</span>
          <button onclick="refreshTable()" class="text-xs text-indigo-600 hover:text-indigo-700 font-semibold flex items-center gap-1">
            <i class="fi fi-rr-refresh"></i> Refresh
          </button>
        </div>
        <div class="flex items-center gap-2">
          <button onclick="bulkApproveSelected()" id="bulk-approve-btn" class="hidden bg-emerald-100 text-emerald-700 px-4 py-2 rounded-lg text-xs font-bold hover:bg-emerald-200 transition-all">
            <i class="fi fi-rr-check-double mr-1"></i>Bulk Approve
          </button>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-slate-50 border-b border-slate-200">
            <tr>
              <th class="px-6 py-4 text-left">
                <input type="checkbox" id="selectAll" class="w-4 h-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" onchange="toggleSelectAll()">
              </th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-600 uppercase tracking-wider">Submission</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-600 uppercase tracking-wider">Writer</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-600 uppercase tracking-wider">Order Info</th>
              <th class="px-6 py-4 text-center text-xs font-black text-slate-600 uppercase tracking-wider">Quality Scores</th>
              <th class="px-6 py-4 text-center text-xs font-black text-slate-600 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-center text-xs font-black text-slate-600 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% if (records && records.length > 0) { %>
              <% records.forEach((record, idx) => { %>
                <tr class="hover:bg-indigo-50/30 transition-all group" data-submission-id="<%= record.submission_id %>">
                  <!-- Checkbox -->
                  <td class="px-6 py-4">
                    <input type="checkbox" class="submission-checkbox w-4 h-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" value="<%= record.submission_id %>" onchange="updateBulkActions()">
                  </td>

                  <!-- Submission ID -->
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-500 to-violet-600 flex items-center justify-center text-white font-bold text-xs shadow-lg shadow-indigo-500/30">
                        #<%= record.submission_id %>
                      </div>
                      <div>
                        <p class="text-xs text-slate-500">Submitted</p>
                        <p class="text-sm font-semibold text-slate-700"><%= new Date(record.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %></p>
                      </div>
                    </div>
                  </td>

                  <!-- Writer Info -->
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class="w-9 h-9 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white font-bold text-xs">
                        <%= record.writer_name ? record.writer_name.split(' ').map(n => n[0]).join('').substring(0,2).toUpperCase() : 'WR' %>
                      </div>
                      <div>
                        <p class="font-semibold text-slate-800 text-sm"><%= record.writer_name %></p>
                        <p class="text-xs text-slate-500 truncate max-w-[120px]"><%= record.writer_email %></p>
                      </div>
                    </div>
                  </td>

                  <!-- Order Info -->
                  <td class="px-6 py-4">
                    <p class="font-bold text-indigo-600 text-sm"><%= record.query_code || 'N/A' %></p>
                    <p class="text-xs text-slate-500 truncate max-w-[180px] mt-0.5"><%= record.topic || 'No topic specified' %></p>
                    <% if (record.deadline_at) { 
                      const deadline = new Date(record.deadline_at);
                      const now = new Date();
                      const hoursLeft = (deadline - now) / (1000 * 60 * 60);
                    %>
                      <span class="inline-flex items-center gap-1 mt-1 px-2 py-0.5 rounded-full text-[10px] font-bold <%= hoursLeft < 24 ? 'bg-red-100 text-red-700' : hoursLeft < 48 ? 'bg-amber-100 text-amber-700' : 'bg-slate-100 text-slate-600' %>">
                        <i class="fi fi-rr-clock"></i> Due: <%= deadline.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                      </span>
                    <% } %>
                  </td>

                  <!-- Quality Scores - Visual -->
                  <td class="px-6 py-4">
                    <div class="flex items-center justify-center gap-3">
                      <!-- Grammarly -->
                      <div class="text-center group/score relative">
                        <div class="w-12 h-12 rounded-xl <%= record.grammarly_score >= 90 ? 'bg-emerald-100' : record.grammarly_score >= 70 ? 'bg-amber-100' : 'bg-red-100' %> flex items-center justify-center">
                          <span class="text-sm font-black <%= record.grammarly_score >= 90 ? 'text-emerald-600' : record.grammarly_score >= 70 ? 'text-amber-600' : 'text-red-600' %>">
                            <%= record.grammarly_score || '--' %>
                          </span>
                        </div>
                        <p class="text-[10px] text-slate-500 mt-1 font-medium">Grammar</p>
                        <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-slate-900 text-white text-[10px] px-2 py-1 rounded opacity-0 group-hover/score:opacity-100 transition-opacity whitespace-nowrap">
                          Grammarly Score: <%= record.grammarly_score || 'N/A' %>%
                        </div>
                      </div>

                      <!-- AI -->
                      <div class="text-center group/score relative">
                        <div class="w-12 h-12 rounded-xl <%= record.ai_score <= 10 ? 'bg-emerald-100' : record.ai_score <= 30 ? 'bg-amber-100' : 'bg-red-100' %> flex items-center justify-center">
                          <span class="text-sm font-black <%= record.ai_score <= 10 ? 'text-emerald-600' : record.ai_score <= 30 ? 'text-amber-600' : 'text-red-600' %>">
                            <%= record.ai_score || '--' %>
                          </span>
                        </div>
                        <p class="text-[10px] text-slate-500 mt-1 font-medium">AI</p>
                        <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-slate-900 text-white text-[10px] px-2 py-1 rounded opacity-0 group-hover/score:opacity-100 transition-opacity whitespace-nowrap">
                          AI Detection: <%= record.ai_score || 'N/A' %>% (Lower is better)
                        </div>
                      </div>

                      <!-- Plagiarism -->
                      <div class="text-center group/score relative">
                        <div class="w-12 h-12 rounded-xl <%= record.plagiarism_score <= 10 ? 'bg-emerald-100' : record.plagiarism_score <= 20 ? 'bg-amber-100' : 'bg-red-100' %> flex items-center justify-center">
                          <span class="text-sm font-black <%= record.plagiarism_score <= 10 ? 'text-emerald-600' : record.plagiarism_score <= 20 ? 'text-amber-600' : 'text-red-600' %>">
                            <%= record.plagiarism_score || '--' %>
                          </span>
                        </div>
                        <p class="text-[10px] text-slate-500 mt-1 font-medium">Plag</p>
                        <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-slate-900 text-white text-[10px] px-2 py-1 rounded opacity-0 group-hover/score:opacity-100 transition-opacity whitespace-nowrap">
                          Plagiarism: <%= record.plagiarism_score || 'N/A' %>% (Lower is better)
                        </div>
                      </div>
                    </div>
                  </td>

                  <!-- Status -->
                  <td class="px-6 py-4 text-center">
                    <% 
                      const statusConfig = {
                        'pending_qc': { bg: 'bg-amber-100', text: 'text-amber-700', icon: 'fi-rr-time-past', label: 'Pending QC' },
                        'approved': { bg: 'bg-emerald-100', text: 'text-emerald-700', icon: 'fi-rr-check', label: 'Approved' },
                        'revision_required': { bg: 'bg-red-100', text: 'text-red-700', icon: 'fi-rr-arrow-rotate-left', label: 'Revision' },
                        'completed': { bg: 'bg-blue-100', text: 'text-blue-700', icon: 'fi-rr-badge-check', label: 'Completed' }
                      };
                      const status = statusConfig[record.status] || { bg: 'bg-slate-100', text: 'text-slate-700', icon: 'fi-rr-info', label: record.status };
                    %>
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-bold <%= status.bg %> <%= status.text %>">
                      <i class="fi <%= status.icon %>"></i> <%= status.label %>
                    </span>
                  </td>

                  <!-- Actions -->
                  <td class="px-6 py-4">
                    <div class="flex items-center justify-center gap-2 opacity-80 group-hover:opacity-100 transition-opacity">
                      <button onclick="viewQCDetail(<%= record.submission_id %>)" class="w-9 h-9 rounded-lg bg-indigo-100 text-indigo-600 hover:bg-indigo-200 flex items-center justify-center transition-all" title="Review Details">
                        <i class="fi fi-rr-eye"></i>
                      </button>
                      <% if (record.status === 'pending_qc') { %>
                        <button onclick="quickApprove(<%= record.submission_id %>)" class="w-9 h-9 rounded-lg bg-emerald-100 text-emerald-600 hover:bg-emerald-200 flex items-center justify-center transition-all" title="Quick Approve">
                          <i class="fi fi-rr-check"></i>
                        </button>
                        <button onclick="openRejectModal(<%= record.submission_id %>)" class="w-9 h-9 rounded-lg bg-red-100 text-red-600 hover:bg-red-200 flex items-center justify-center transition-all" title="Request Revision">
                          <i class="fi fi-rr-undo"></i>
                        </button>
                      <% } %>
                      <!-- Admin Force Approve (for revision_required status) -->
                      <% if (record.status === 'revision_required') { %>
                        <button onclick="adminForceApprove(<%= record.submission_id %>)" class="w-9 h-9 rounded-lg bg-purple-100 text-purple-600 hover:bg-purple-200 flex items-center justify-center transition-all" title="Force Approve (Admin Override)">
                          <i class="fi fi-rr-shield-check"></i>
                        </button>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="7" class="px-6 py-16 text-center">
                  <div class="w-16 h-16 rounded-full bg-slate-100 flex items-center justify-center mx-auto mb-4">
                    <i class="fi fi-rr-inbox text-3xl text-slate-400"></i>
                  </div>
                  <p class="text-slate-600 font-semibold">No submissions pending QC review</p>
                  <p class="text-slate-400 text-sm mt-1">All caught up! Check back later for new submissions.</p>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- PREMIUM PAGINATION -->
    <% if (pages > 1) { %>
      <div class="flex justify-center items-center gap-1">
        <% if (page > 1) { %>
          <a href="/admin/qc/pending?page=<%= page - 2 %>&status=<%= filters.status %>" class="w-10 h-10 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-slate-600 hover:bg-slate-50 transition-all">
            <i class="fi fi-rr-angle-left"></i>
          </a>
        <% } %>
        
        <% for (let i = 1; i <= pages; i++) { %>
          <% if (i === page) { %>
            <span class="w-10 h-10 flex items-center justify-center rounded-lg bg-gradient-to-r from-indigo-600 to-violet-600 text-white font-bold text-sm shadow-lg shadow-indigo-500/30"><%= i %></span>
          <% } else if (Math.abs(i - page) <= 2 || i === 1 || i === pages) { %>
            <a href="/admin/qc/pending?page=<%= i - 1 %>&status=<%= filters.status %>" class="w-10 h-10 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-slate-700 hover:bg-indigo-50 hover:border-indigo-200 hover:text-indigo-600 font-semibold text-sm transition-all">
              <%= i %>
            </a>
          <% } else if (Math.abs(i - page) === 3) { %>
            <span class="text-slate-400">...</span>
          <% } %>
        <% } %>
        
        <% if (page < pages) { %>
          <a href="/admin/qc/pending?page=<%= page %>&status=<%= filters.status %>" class="w-10 h-10 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-slate-600 hover:bg-slate-50 transition-all">
            <i class="fi fi-rr-angle-right"></i>
          </a>
        <% } %>
      </div>
    <% } %>

  </div>
</section>

