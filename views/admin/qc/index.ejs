<script>
let currentSubmissionId = null;

// Refresh table
function refreshTable() {
  location.reload();
}

// Select all checkboxes
function toggleSelectAll() {
  const selectAll = document.getElementById('selectAll');
  document.querySelectorAll('.submission-checkbox').forEach(cb => {
    cb.checked = selectAll.checked;
  });
  updateBulkActions();
}

// Update bulk action button visibility
function updateBulkActions() {
  const checkedBoxes = document.querySelectorAll('.submission-checkbox:checked');
  const bulkBtn = document.getElementById('bulk-approve-btn');
  if (checkedBoxes.length > 0) {
    bulkBtn.classList.remove('hidden');
    bulkBtn.textContent = `Bulk Approve (${checkedBoxes.length})`;
  } else {
    bulkBtn.classList.add('hidden');
  }
}

// View QC Detail in Modal
async function viewQCDetail(submissionId) {
  document.getElementById('qcModal').classList.remove('hidden');
  document.getElementById('qcModalContent').innerHTML = `
    <div class="flex items-center justify-center py-12">
      <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center">
        <i class="fi fi-rr-spinner-alt animate-spin text-indigo-600"></i>
      </div>
    </div>
  `;
  
  try {
    const response = await fetch(`/admin/qc/${submissionId}/detail`);
    const data = await response.json();
    
    if (data.success) {
      const s = data.submission;
      
      // History HTML Generation
      const historyHtml = data.previousSubmissions && data.previousSubmissions.length > 0 ? `
