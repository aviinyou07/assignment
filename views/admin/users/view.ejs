<section class="space-y-6">

  <!-- HEADER -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <a href="/admin/users" class="text-indigo-600 hover:text-indigo-700 font-bold flex items-center gap-2">
        <i class="fi fi-rr-arrow-left"></i> Back to Users
      </a>
      <h1 class="text-3xl font-black text-slate-800">User Details</h1>
    </div>
    <a href="/admin/users/<%= user.user_id %>/edit" class="bg-indigo-600 text-white px-6 py-2 rounded-xl font-bold hover:bg-indigo-700 transition-all flex items-center gap-2">
      <i class="fi fi-rr-edit"></i> Edit User
    </a>
  </div>

  <!-- USER PROFILE CARD -->
  <div class="bg-white p-8 rounded-2xl border border-slate-200 shadow-sm">
    <div class="flex items-start gap-6 mb-6">
      <div class="w-20 h-20 rounded-xl bg-gradient-to-tr from-indigo-600 to-violet-500 flex items-center justify-center text-white font-bold text-3xl shadow-lg">
        <%= initials %>
      </div>
      <div class="flex-1">
        <h2 class="text-3xl font-black text-slate-800"><%= user.full_name %></h2>
        <p class="text-slate-500 mt-1">
          <span class="<%= user.role === 'client' ? 'text-blue-600' : user.role === 'writer' ? 'text-green-600' : user.role === 'bde' ? 'text-orange-600' : 'text-purple-600' %> font-bold uppercase"><%= user.role %></span>
        </p>
        <div class="flex gap-3 mt-3">
          <% if (user.is_active) { %>
            <span class="bg-green-100 text-green-700 px-3 py-1 rounded-lg text-xs font-bold flex items-center gap-1">
              <i class="fi fi-rr-check-circle"></i> Active
            </span>
          <% } else { %>
            <span class="bg-red-100 text-red-700 px-3 py-1 rounded-lg text-xs font-bold flex items-center gap-1">
              <i class="fi fi-rr-circle-xmark"></i> Inactive
            </span>
          <% } %>
          <% if (user.is_verified) { %>
            <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-lg text-xs font-bold flex items-center gap-1">
              <i class="fi fi-rr-check"></i> Verified
            </span>
          <% } %>
        </div>
      </div>
    </div>

    <!-- PROFILE DETAILS GRID -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      
      <div>
        <p class="text-slate-500 text-xs font-bold uppercase mb-1">Email</p>
        <p class="text-slate-800 font-bold"><%= user.email %></p>
      </div>

      <div>
        <p class="text-slate-500 text-xs font-bold uppercase mb-1">Mobile</p>
        <p class="text-slate-800 font-bold"><%= user.mobile_number || "—" %></p>
      </div>

      <div>
        <p class="text-slate-500 text-xs font-bold uppercase mb-1">WhatsApp</p>
        <p class="text-slate-800 font-bold"><%= user.whatsapp || "—" %></p>
      </div>

      <div>
        <p class="text-slate-500 text-xs font-bold uppercase mb-1">University</p>
        <p class="text-slate-800 font-bold"><%= user.university || "—" %></p>
      </div>

      <div>
        <p class="text-slate-500 text-xs font-bold uppercase mb-1">Country</p>
        <p class="text-slate-800 font-bold"><%= user.country || "—" %></p>
      </div>

      <div>
        <p class="text-slate-500 text-xs font-bold uppercase mb-1">Currency</p>
        <p class="text-slate-800 font-bold"><%= user.currency_code || "—" %></p>
      </div>

      <div>
        <p class="text-slate-500 text-xs font-bold uppercase mb-1">Joined</p>
        <p class="text-slate-800 font-bold"><%= new Date(user.created_at).toLocaleDateString() %></p>
      </div>

      <div>
        <p class="text-slate-500 text-xs font-bold uppercase mb-1">User ID</p>
        <p class="text-slate-800 font-mono font-bold"><%= user.user_id %></p>
      </div>

      <div>
        <p class="text-slate-500 text-xs font-bold uppercase mb-1">Referral Code</p>
        <p class="text-slate-800 font-bold"><%= user.referal_code || "—" %></p>
      </div>

    </div>
  </div>

  <!-- WALLET SECTION -->
  <% if (wallet) { %>
    <div class="bg-white p-8 rounded-2xl border border-slate-200 shadow-sm">
      <h3 class="text-lg font-black text-slate-800 mb-6 flex items-center gap-2">
        <i class="fi fi-rr-wallet text-indigo-600"></i>
        Wallet Information
      </h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-gradient-to-br from-indigo-50 to-violet-50 p-6 rounded-xl border border-indigo-200">
          <p class="text-slate-600 text-sm font-bold uppercase mb-2">Account Balance</p>
          <p class="text-4xl font-black text-indigo-600">$<%= parseFloat(wallet.balance).toFixed(2) %></p>
        </div>

        <div class="bg-slate-50 p-6 rounded-xl border border-slate-200">
          <p class="text-slate-600 text-sm font-bold uppercase mb-2">Wallet Created</p>
          <p class="text-slate-800 font-bold"><%= new Date(wallet.created_at).toLocaleDateString() %></p>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="bg-slate-50 p-8 rounded-2xl border border-slate-200 text-center">
      <i class="fi fi-rr-wallet text-4xl text-slate-300 block mb-2"></i>
      <p class="text-slate-500">No wallet information available</p>
    </div>
  <% } %>

  <!-- RECENT ORDERS SECTION -->
  <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
    <div class="p-8 border-b border-slate-200">
      <h3 class="text-lg font-black text-slate-800 flex items-center gap-2">
        <i class="fi fi-rr-document-signed text-indigo-600"></i>
        Recent Orders (Last 5)
      </h3>
    </div>

    <% if (orders && orders.length > 0) { %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-slate-50 border-b border-slate-200">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Order Code</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Topic</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Service</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Price</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Created</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Deadline</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200">
            <% orders.forEach(order => { %>
              <tr class="hover:bg-slate-50 transition-colors">
                <td class="px-6 py-4 text-sm font-bold text-slate-800"><%= order.order_code %></td>
                <td class="px-6 py-4 text-sm text-slate-600"><%= order.paper_topic.substring(0, 40) %>...</td>
                <td class="px-6 py-4 text-sm text-slate-600"><%= order.service || "—" %></td>
                <td class="px-6 py-4 text-sm font-bold text-indigo-600">$<%= parseFloat(order.total_price_usd).toFixed(2) %></td>
                <td class="px-6 py-4">
                  <% 
                    let statusText = '';
                    let statusColor = '';
                    if (order.status === 1) { statusText = 'Pending'; statusColor = 'yellow'; }
                    else if (order.status === 2) { statusText = 'Processing'; statusColor = 'blue'; }
                    else if (order.status === 3) { statusText = 'Completed'; statusColor = 'green'; }
                    else if (order.status === 4) { statusText = 'Cancelled'; statusColor = 'red'; }
                    else { statusText = 'Unknown'; statusColor = 'gray'; }
                  %>
                  <span class="bg-<%= statusColor %>-100 text-<%= statusColor %>-700 px-3 py-1 rounded-lg text-xs font-bold">
                    <%= statusText %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-slate-600"><%= new Date(order.created_at).toLocaleDateString() %></td>
                <td class="px-6 py-4 text-sm text-slate-600"><%= new Date(order.deadline_at).toLocaleDateString() %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="p-8 text-center text-slate-400">
        <i class="fi fi-rr-inbox text-4xl block mb-2"></i>
        <p>No orders found</p>
      </div>
    <% } %>
  </div>

</section>
