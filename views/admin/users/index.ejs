<section class="min-h-screen bg-slate-50 p-4 md:p-8">
  <div class="max-w-7xl mx-auto space-y-6">

    <!-- HEADER -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-black text-slate-800">Users Management</h1>
        <p class="text-slate-500 mt-1">View and manage all platform users</p>
      </div>
      <div class="flex items-center gap-4">
        <div class="text-right">
          <p class="text-sm text-slate-500">Total Users</p>
          <p class="text-3xl font-black text-indigo-600"><%= total %></p>
        </div>
        <a href="/admin/users/create" class="bg-indigo-600 text-white px-6 py-3 rounded-xl font-bold hover:bg-indigo-700 transition-all flex items-center gap-2">
          <i class="fi fi-rr-plus"></i> Create User
        </a>
      </div>
    </div>

    <!-- FILTERS CARD -->
    <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
      <h3 class="text-lg font-black text-slate-800 mb-4">Filters</h3>
      
      <form method="GET" action="/admin/users" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          
          <!-- Search -->
          <div>
            <label class="text-sm font-bold text-slate-700 mb-2 block">Search</label>
            <input 
              type="text" 
              name="search"
              value="<%= filters.search %>"
              placeholder="Name, email, mobile..."
              class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm"
            >
          </div>

          <!-- Role Filter -->
          <div>
            <label class="text-sm font-bold text-slate-700 mb-2 block">Role</label>
            <select name="role" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm">
              <option value="all" <%= filters.role === 'all' ? 'selected' : '' %>>All Roles</option>
              <option value="client" <%= filters.role === 'client' ? 'selected' : '' %>>Client</option>
              <option value="writer" <%= filters.role === 'writer' ? 'selected' : '' %>>Writer</option>
              <option value="bde" <%= filters.role === 'bde' ? 'selected' : '' %>>BDE</option>
              <option value="admin" <%= filters.role === 'admin' ? 'selected' : '' %>>Admin</option>
            </select>
          </div>

          <!-- Active Filter -->
          <div>
            <label class="text-sm font-bold text-slate-700 mb-2 block">Status</label>
            <select name="is_active" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm">
              <option value="all" <%= filters.is_active === 'all' ? 'selected' : '' %>>All Status</option>
              <option value="active" <%= filters.is_active === 'active' ? 'selected' : '' %>>Active</option>
              <option value="inactive" <%= filters.is_active === 'inactive' ? 'selected' : '' %>>Inactive</option>
            </select>
          </div>

          <!-- Verified Filter -->
          <div>
            <label class="text-sm font-bold text-slate-700 mb-2 block">Verification</label>
            <select name="is_verified" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm">
              <option value="all" <%= filters.is_verified === 'all' ? 'selected' : '' %>>All Users</option>
              <option value="verified" <%= filters.is_verified === 'verified' ? 'selected' : '' %>>Verified</option>
            </select>
          </div>

        </div>

        <div class="flex gap-2">
          <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-lg font-bold text-sm hover:bg-indigo-700 transition-all">
            <i class="fi fi-rr-search mr-2"></i>Apply Filters
          </button>
          <a href="/admin/users" class="bg-slate-200 text-slate-700 px-6 py-2 rounded-lg font-bold text-sm hover:bg-slate-300 transition-all inline-block">
            <i class="fi fi-rr-arrow-rotate-left mr-2"></i>Reset
          </a>
        </div>
      </form>
    </div>

    <!-- USERS TABLE -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-slate-50 border-b border-slate-200">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">User</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Email</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Role</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Joined</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-700 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200">
            <% users.forEach(user => { %>
              <tr class="hover:bg-slate-50 transition-colors">
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-tr from-indigo-600 to-violet-500 flex items-center justify-center text-white font-bold text-sm">
                      <%= user.full_name.split(" ").map(n => n[0]).join("").toUpperCase().substring(0, 2) %>
                    </div>
                    <div>
                      <p class="font-bold text-slate-800"><%= user.full_name %></p>
                      <p class="text-xs text-slate-400"><%= user.university || "â€”" %></p>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-slate-600"><%= user.email %></td>
                <td class="px-6 py-4">
                  <span class="<%= user.role === 'client' ? 'bg-blue-100 text-blue-700' : user.role === 'writer' ? 'bg-green-100 text-green-700' : user.role === 'bde' ? 'bg-orange-100 text-orange-700' : 'bg-purple-100 text-purple-700' %> px-3 py-1 rounded-full text-xs font-bold uppercase">
                    <%= user.role %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center gap-2">
                    <% if (user.is_active) { %>
                      <span class="flex items-center gap-1 text-xs font-bold text-green-600">
                        <i class="fi fi-rr-check-circle"></i> Active
                      </span>
                    <% } else { %>
                      <span class="flex items-center gap-1 text-xs font-bold text-red-600">
                        <i class="fi fi-rr-circle-xmark"></i> Inactive
                      </span>
                    <% } %>
                    <% if (user.is_verified) { %>
                      <span class="flex items-center gap-1 text-xs font-bold text-blue-600">
                        <i class="fi fi-rr-check"></i> Verified
                      </span>
                    <% } %>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-slate-600">
                  <%= new Date(user.created_at).toLocaleDateString() %>
                </td>
                <td class="px-6 py-4">
                  <div class="flex gap-2">
                    <a href="/admin/users/<%= user.user_id %>/view" class="bg-blue-100 text-blue-600 hover:bg-blue-200 px-3 py-1 rounded-lg text-xs font-bold transition-all">
                      <i class="fi fi-rr-eye mr-1"></i>View
                    </a>
                    <a href="/admin/users/<%= user.user_id %>/edit" class="bg-indigo-100 text-indigo-600 hover:bg-indigo-200 px-3 py-1 rounded-lg text-xs font-bold transition-all">
                      <i class="fi fi-rr-edit mr-1"></i>Edit
                    </a>
                    <button onclick="deleteUser(<%= user.user_id %>, '<%= user.full_name %>')" class="bg-red-100 text-red-600 hover:bg-red-200 px-3 py-1 rounded-lg text-xs font-bold transition-all">
                      <i class="fi fi-rr-trash mr-1"></i>Delete
                    </button>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <% if (users.length === 0) { %>
        <div class="p-8 text-center text-slate-400">
          <i class="fi fi-rr-inbox text-4xl block mb-2"></i>
          <p>No users found matching your filters</p>
        </div>
      <% } %>
    </div>

    <!-- PAGINATION -->
    <% if (pages > 1) { %>
      <div class="flex justify-center gap-2">
        <% for (let i = 1; i <= pages; i++) { %>
          <% if (i === page) { %>
            <span class="bg-indigo-600 text-white px-4 py-2 rounded-lg font-bold text-sm">
              <%= i %>
            </span>
          <% } else { %>
            <a href="/admin/users?page=<%= i %>&role=<%= filters.role %>&is_active=<%= filters.is_active %>&is_verified=<%= filters.is_verified %>&search=<%= filters.search %>" class="bg-white border border-slate-300 text-slate-700 hover:bg-slate-100 px-4 py-2 rounded-lg font-bold text-sm transition-all">
              <%= i %>
            </a>
          <% } %>
        <% } %>
      </div>
    <% } %>

  </div>
</section>

<script>
async function deleteUser(userId, userName) {
  const confirmed = await showConfirmModal(
    'Delete User',
    `Are you sure you want to delete "${userName}"? This action cannot be undone!`,
    'danger'
  );
  
  if (!confirmed) return;

  try {
    const response = await fetch(`/admin/users/${userId}/delete`, {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' }
    });
    
    const result = await response.json();
    
    if (result.success) {
      showToast('User deleted successfully!', 'success');
      setTimeout(() => window.location.href = '/admin/users', 1500);
    } else {
      showToast(result.message || 'Failed to delete user', 'error');
    }
  } catch (err) {
    console.error('Delete error:', err);
    showToast('An error occurred while deleting user', 'error');
  }
}
</script>
