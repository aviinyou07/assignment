<script>
let currentPaymentId = null;
let currentOrderCode = '';
let currentAmount = 0;

// Open verify modal
function openVerifyModal(paymentId, orderCode, amount) {
  currentPaymentId = paymentId;
  currentOrderCode = orderCode;
  currentAmount = amount;
  
  document.getElementById('verifyOrderCode').textContent = orderCode;
  document.getElementById('verifyAmount').textContent = parseFloat(amount).toFixed(2);
  document.getElementById('selectedPercentage').value = '100';
  
  // Reset button states
  selectPaymentType(100);
  
  document.getElementById('verifyModal').classList.remove('hidden');
}

function closeVerifyModal() {
  document.getElementById('verifyModal').classList.add('hidden');
  currentPaymentId = null;
}

// Select payment type
function selectPaymentType(percentage) {
  document.getElementById('selectedPercentage').value = percentage;
  
  // Reset all buttons
  document.querySelectorAll('.payment-type-btn').forEach(btn => {
    btn.classList.remove('border-emerald-400', 'bg-emerald-50', 'border-amber-400', 'bg-amber-50');
    btn.classList.add('border-slate-200');
  });
  
  // Highlight selected
  const btn = document.getElementById(`payType${percentage}`);
  btn.classList.remove('border-slate-200');
  if (percentage === 100) {
    btn.classList.add('border-emerald-400', 'bg-emerald-50');
  } else {
    btn.classList.add('border-amber-400', 'bg-amber-50');
  }
}

// Submit verification
async function submitVerification() {
  const percentage = parseInt(document.getElementById('selectedPercentage').value);
  
  try {
    const response = await fetch(`/admin/payments/${currentPaymentId}/verify`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ 
        verification_status: 'verified',
        percentage: percentage
      })
    });
    
    const result = await response.json();
    
    if (result.success) {
      showToast(`Payment verified (${percentage}%)! Customer notified.`, 'success');
      closeVerifyModal();
      setTimeout(() => location.reload(), 1000);
    } else {
      showToast('Failed: ' + (result.message || 'Unknown error'), 'error');
    }
  } catch (err) {
    showToast('Error: ' + err.message, 'error');
  }
}

// Open reject modal
function openRejectPaymentModal(paymentId) {
  currentPaymentId = paymentId;
  document.getElementById('rejectPaymentReason').value = '';
  document.getElementById('rejectPaymentModal').classList.remove('hidden');
}

function closeRejectPaymentModal() {
  document.getElementById('rejectPaymentModal').classList.add('hidden');
  currentPaymentId = null;
}

// Submit rejection
async function submitPaymentRejection() {
  const reason = document.getElementById('rejectPaymentReason').value.trim();
  
  if (!reason) {
    showToast('Please provide a rejection reason', 'warning');
    return;
  }
  
  try {
    const response = await fetch(`/admin/payments/${currentPaymentId}/verify`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ 
        verification_status: 'rejected',
        rejection_reason: reason
      })
    });
    
    const result = await response.json();
    
    if (result.success) {
      showToast('Payment rejected. Customer notified with CRITICAL alert.', 'success');
      closeRejectPaymentModal();
      setTimeout(() => location.reload(), 1000);
    } else {
      showToast('Failed: ' + (result.message || 'Unknown error'), 'error');
    }
  } catch (err) {
    showToast('Error: ' + err.message, 'error');
  }
}

// View payment history
async function viewPaymentHistory(queryId) {
  document.getElementById('historyModal').classList.remove('hidden');
  document.getElementById('historyContent').innerHTML = `
    <div class="flex items-center justify-center py-8">
      <i class="fi fi-rr-spinner-alt animate-spin text-indigo-600 text-xl"></i>
    </div>
  `;
  
  try {
    const response = await fetch(`/admin/payments/history/${queryId}`);
    const data = await response.json();
    
    if (data.success && data.history) {
      let html = '<div class="space-y-4">';
      data.history.forEach(entry => {
        html += `
          <div class="p-4 bg-slate-50 rounded-xl border border-slate-100">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-emerald-600">$${parseFloat(entry.amount).toFixed(2)}</span>
              <span class="text-xs px-2 py-1 rounded-full ${entry.verification_status === 'verified' ? 'bg-emerald-100 text-emerald-700' : entry.verification_status === 'rejected' ? 'bg-red-100 text-red-700' : 'bg-amber-100 text-amber-700'}">${entry.verification_status}</span>
            </div>
            <p class="text-xs text-slate-500">${entry.payment_method} ‚Ä¢ ${new Date(entry.created_at).toLocaleDateString()}</p>
          </div>
        `;
      });
      html += '</div>';
      
      if (data.history.length === 0) {
        html = '<div class="text-center py-8 text-slate-400"><i class="fi fi-rr-info block text-2xl mb-2"></i>No payment history found</div>';
      }
      
      document.getElementById('historyContent').innerHTML = html;
    } else {
      document.getElementById('historyContent').innerHTML = '<div class="text-center py-8 text-slate-400">Failed to load history</div>';
    }
  } catch (err) {
    document.getElementById('historyContent').innerHTML = '<div class="text-center py-8 text-red-500">Error loading history</div>';
  }
}

function closeHistoryModal() {
  document.getElementById('historyModal').classList.add('hidden');
}

// View receipt
function viewReceipt(receiptUrl) {
  document.getElementById('receiptFrame').src = receiptUrl;
  document.getElementById('receiptDownloadLink').href = receiptUrl;
  document.getElementById('receiptModal').classList.remove('hidden');
}

function closeReceiptModal() {
  document.getElementById('receiptModal').classList.add('hidden');
  document.getElementById('receiptFrame').src = '';
}

