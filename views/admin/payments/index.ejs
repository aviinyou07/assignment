      <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
        <span class="text-sm font-bold text-slate-700">Showing <%= payments ? payments.length : 0 %> payments</span>
        <button onclick="location.reload()" class="text-xs text-emerald-600 hover:text-emerald-700 font-semibold flex items-center gap-1">
          <i class="fi fi-rr-refresh"></i> Refresh
        </button>
