                        <p class="text-xs text-slate-500"><%= new Date(payment.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></p>
                      </div>
                    </div>
                  </td>

                  <!-- Customer Info -->
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class="w-9 h-9 rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center text-white font-bold text-xs">
                        <%= payment.full_name ? payment.full_name.split(' ').map(n => n[0]).join('').substring(0,2).toUpperCase() : 'CL' %>
                      </div>
                      <div>
                        <p class="font-semibold text-slate-800 text-sm"><%= payment.full_name %></p>
                        <p class="text-xs text-slate-500 truncate max-w-[140px]"><%= payment.email %></p>
