<section class="min-h-screen bg-slate-50 p-4 md:p-8">
  <div class="max-w-7xl mx-auto space-y-8">

    <!-- HEADER -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-4xl font-black text-slate-800">Admin Dashboard</h1>
        <p class="text-slate-600 mt-1">Complete platform oversight and control</p>
      </div>
      <div class="text-right">
        <p class="text-sm text-slate-500">Last updated</p>
        <p class="text-lg font-bold text-slate-700"><%= new Date().toLocaleTimeString() %></p>
      </div>
    </div>

    <!-- KPI CARDS GRID -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

      <!-- Today's Revenue -->
      <a href="/admin/payments" class="bg-white p-6 rounded-2xl border border-emerald-200 shadow-sm hover:shadow-md transition-all cursor-pointer group">
        <div class="flex items-start justify-between mb-4">
          <div>
            <p class="text-sm text-slate-600 mb-1">Today's Revenue</p>
            <p class="text-3xl font-black text-emerald-600">$<%= kpis.todayRevenue %></p>
          </div>
          <div class="bg-emerald-100 p-3 rounded-xl group-hover:bg-emerald-200 transition">
            <i class="fi fi-rr-chart-simple text-emerald-600 text-xl"></i>
          </div>
        </div>
        <div class="text-xs text-emerald-600 font-bold">→ View All Payments</div>
      </a>

      <!-- Month's Revenue -->
      <a href="/admin/payments" class="bg-white p-6 rounded-2xl border border-blue-200 shadow-sm hover:shadow-md transition-all cursor-pointer group">
        <div class="flex items-start justify-between mb-4">
          <div>
            <p class="text-sm text-slate-600 mb-1">This Month's Revenue</p>
            <p class="text-3xl font-black text-blue-600">$<%= kpis.monthRevenue %></p>
          </div>
          <div class="bg-blue-100 p-3 rounded-xl group-hover:bg-blue-200 transition">
            <i class="fi fi-rr-calendar-lines text-blue-600 text-xl"></i>
          </div>
        </div>
        <div class="text-xs text-blue-600 font-bold">→ View Payments</div>
      </a>

      <!-- New Queries Today -->
      <a href="/admin/queries?status=new" class="bg-white p-6 rounded-2xl border border-amber-200 shadow-sm hover:shadow-md transition-all cursor-pointer group">
        <div class="flex items-start justify-between mb-4">
          <div>
            <p class="text-sm text-slate-600 mb-1">New Queries Today</p>
            <p class="text-3xl font-black text-amber-600"><%= kpis.newQueries %></p>
          </div>
          <div class="bg-amber-100 p-3 rounded-xl group-hover:bg-amber-200 transition">
            <i class="fi fi-rr-inbox text-amber-600 text-xl"></i>
          </div>
        </div>
        <div class="text-xs text-amber-600 font-bold">→ View Queries</div>
      </a>

      <!-- Pending Quotations -->
      <a href="/admin/queries?status=quotation-sent" class="bg-white p-6 rounded-2xl border border-purple-200 shadow-sm hover:shadow-md transition-all cursor-pointer group">
        <div class="flex items-start justify-between mb-4">
          <div>
            <p class="text-sm text-slate-600 mb-1">Pending Quotations</p>
            <p class="text-3xl font-black text-purple-600"><%= kpis.pendingQuotations %></p>
          </div>
          <div class="bg-purple-100 p-3 rounded-xl group-hover:bg-purple-200 transition">
            <i class="fi fi-rr-document-signed text-purple-600 text-xl"></i>
          </div>
        </div>
        <div class="text-xs text-purple-600 font-bold">→ Review Quotations</div>
      </a>

      <!-- Confirmed Orders Today -->
      <a href="/admin/queries?status=confirmed" class="bg-white p-6 rounded-2xl border border-green-200 shadow-sm hover:shadow-md transition-all cursor-pointer group">
        <div class="flex items-start justify-between mb-4">
          <div>
            <p class="text-sm text-slate-600 mb-1">Confirmed Orders Today</p>
            <p class="text-3xl font-black text-green-600"><%= kpis.confirmedOrders %></p>
          </div>
          <div class="bg-green-100 p-3 rounded-xl group-hover:bg-green-200 transition">
            <i class="fi fi-rr-check-double text-green-600 text-xl"></i>
          </div>
        </div>
        <div class="text-xs text-green-600 font-bold">→ View Orders</div>
      </a>

      <!-- Active Tasks -->
      <a href="/admin/tasks" class="bg-white p-6 rounded-2xl border border-indigo-200 shadow-sm hover:shadow-md transition-all cursor-pointer group">
        <div class="flex items-start justify-between mb-4">
          <div>
            <p class="text-sm text-slate-600 mb-1">Active Tasks</p>
            <p class="text-3xl font-black text-indigo-600"><%= kpis.activeTasks %></p>
          </div>
          <div class="bg-indigo-100 p-3 rounded-xl group-hover:bg-indigo-200 transition">
            <i class="fi fi-rr-hourglass text-indigo-600 text-xl"></i>
          </div>
        </div>
        <div class="text-xs text-indigo-600 font-bold">→ Monitor Tasks</div>
      </a>

      <!-- Completed Tasks This Month -->
      <a href="/admin/tasks?status=completed" class="bg-white p-6 rounded-2xl border border-teal-200 shadow-sm hover:shadow-md transition-all cursor-pointer group">
        <div class="flex items-start justify-between mb-4">
          <div>
            <p class="text-sm text-slate-600 mb-1">Completed This Month</p>
            <p class="text-3xl font-black text-teal-600"><%= kpis.completedTasks %></p>
          </div>
          <div class="bg-teal-100 p-3 rounded-xl group-hover:bg-teal-200 transition">
            <i class="fi fi-rr-check-circle text-teal-600 text-xl"></i>
          </div>
        </div>
        <div class="text-xs text-teal-600 font-bold">→ View Completed</div>
      </a>

      <!-- Pending Approvals -->
      <a href="/admin/payments" class="bg-white p-6 rounded-2xl border border-red-200 shadow-sm hover:shadow-md transition-all cursor-pointer group">
        <div class="flex items-start justify-between mb-4">
          <div>
            <p class="text-sm text-slate-600 mb-1">Pending Approvals</p>
            <p class="text-3xl font-black text-red-600"><%= kpis.pendingApprovals %></p>
          </div>
          <div class="bg-red-100 p-3 rounded-xl group-hover:bg-red-200 transition">
            <i class="fi fi-rr-circle-exclamation text-red-600 text-xl"></i>
          </div>
        </div>
        <div class="text-xs text-red-600 font-bold">→ Review Approvals</div>
      </a>

    </div>

    <!-- MAIN ACTIONS -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

      <!-- Quick Actions -->
      <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
        <h3 class="text-lg font-black text-slate-800 mb-4 flex items-center gap-2">
          <i class="fi fi-rr-rocket text-indigo-600"></i>
          Quick Actions
        </h3>
        <div class="space-y-2">
          <a href="/admin/queries" class="block w-full bg-indigo-600 text-white px-4 py-2 rounded-lg font-bold text-sm hover:bg-indigo-700 transition text-center">
            <i class="fi fi-rr-list mr-2"></i>View All Queries
          </a>
          <a href="/admin/payments" class="block w-full bg-emerald-600 text-white px-4 py-2 rounded-lg font-bold text-sm hover:bg-emerald-700 transition text-center">
            <i class="fi fi-rr-credit mr-2"></i>Verify Payments
          </a>
          <a href="/admin/tasks" class="block w-full bg-blue-600 text-white px-4 py-2 rounded-lg font-bold text-sm hover:bg-blue-700 transition text-center">
            <i class="fi fi-rr-briefcase mr-2"></i>Monitor Tasks
          </a>
          <a href="/admin/users" class="block w-full bg-purple-600 text-white px-4 py-2 rounded-lg font-bold text-sm hover:bg-purple-700 transition text-center">
            <i class="fi fi-rr-users mr-2"></i>Manage Users
          </a>
        </div>
      </div>

      <!-- System Status -->
      <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
        <h3 class="text-lg font-black text-slate-800 mb-4 flex items-center gap-2">
          <i class="fi fi-rr-heart-pulse text-red-600"></i>
          System Status
        </h3>
        <div class="space-y-3 text-sm">
          <div class="flex items-center justify-between">
            <span class="text-slate-600">Database</span>
            <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full font-bold text-xs">Connected</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-600">Email Service</span>
            <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full font-bold text-xs">Active</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-600">API Status</span>
            <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full font-bold text-xs">Healthy</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-600">Uptime</span>
            <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full font-bold text-xs">99.9%</span>
          </div>
        </div>
      </div>

      <!-- Admin Stats -->
      <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
        <h3 class="text-lg font-black text-slate-800 mb-4 flex items-center gap-2">
          <i class="fi fi-rr-user-shield text-indigo-600"></i>
          Admin Info
        </h3>
        <div class="space-y-3 text-sm">
          <div>
            <p class="text-slate-600">Name</p>
            <p class="font-bold text-slate-800"><%= profile.full_name %></p>
          </div>
          <div>
            <p class="text-slate-600">Email</p>
            <p class="font-bold text-slate-800 break-all"><%= profile.email %></p>
          </div>
          <div>
            <p class="text-slate-600">Member Since</p>
            <p class="font-bold text-slate-800"><%= new Date(profile.created_at).toLocaleDateString() %></p>
          </div>
        </div>
      </div>

    </div>

    <!-- RECENT ACTIVITY -->
    <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
      <h3 class="text-lg font-black text-slate-800 mb-6 pb-4 border-b border-slate-200 flex items-center gap-2">
        <i class="fi fi-rr-activity text-indigo-600"></i>
        Recent Activity
      </h3>

      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-slate-50 border-b border-slate-200">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-black text-slate-700 uppercase">Order</th>
              <th class="px-4 py-3 text-left text-xs font-black text-slate-700 uppercase">Topic</th>
              <th class="px-4 py-3 text-left text-xs font-black text-slate-700 uppercase">Status</th>
              <th class="px-4 py-3 text-left text-xs font-black text-slate-700 uppercase">Created</th>
              <th class="px-4 py-3 text-left text-xs font-black text-slate-700 uppercase">Action</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200">
            <% recentActivities.forEach(activity => { %>
              <tr class="hover:bg-slate-50 transition">
                <td class="px-4 py-3">
                  <span class="font-bold text-slate-800"><%= activity.order_code || 'N/A' %></span>
                </td>
                <td class="px-4 py-3 text-sm text-slate-600"><%= activity.paper_topic.substring(0, 40) %>...</td>
                <td class="px-4 py-3">
                  <% const statuses = {1: 'New', 2: 'Under Review', 3: 'Quotation', 4: 'Awaiting', 5: 'Confirmed', 6: 'Closed'}; %>
                  <span class="px-3 py-1 rounded-full text-xs font-bold <%= 
                    activity.status == 1 || activity.status == 2 ? 'bg-yellow-100 text-yellow-700' :
                    activity.status == 3 ? 'bg-blue-100 text-blue-700' :
                    activity.status >= 5 ? 'bg-green-100 text-green-700' :
                    'bg-slate-100 text-slate-700'
                  %>"><%= statuses[activity.status] %></span>
                </td>
                <td class="px-4 py-3 text-sm text-slate-600"><%= new Date(activity.created_at).toLocaleDateString() %></td>
                <td class="px-4 py-3">
                  <a href="/admin/queries/<%= activity.order_id %>/view" class="text-indigo-600 hover:text-indigo-700 font-bold text-sm">View →</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</section>
