      <!-- ORDER LIFECYCLE FUNNEL -->
      <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
        <div class="bg-gradient-to-r from-violet-600 to-purple-600 px-6 py-4">
          <h3 class="text-lg font-black text-white flex items-center gap-2">
            <i class="fi fi-rr-funnel"></i> Order Lifecycle
          </h3>
        </div>
        <div class="p-4 space-y-3">
          <!-- Query Phase -->
          <div class="relative">
            <div class="flex items-center gap-3 p-3 rounded-xl bg-amber-50 border border-amber-200">
              <div class="w-8 h-8 rounded-full bg-amber-500 text-white flex items-center justify-center text-sm font-bold">1</div>
              <div class="flex-1">
                <p class="text-sm font-bold text-slate-800">QUERY PHASE</p>
                <p class="text-xs text-slate-500">New queries ‚Üí Quotations</p>
              </div>
              <span class="text-lg font-black text-amber-600"><%= kpis.newQueries + kpis.pendingQuotations %></span>
            </div>
          </div>
          
          <!-- Payment Phase -->
          <div class="relative">
            <div class="flex items-center gap-3 p-3 rounded-xl bg-emerald-50 border border-emerald-200">
              <div class="w-8 h-8 rounded-full bg-emerald-500 text-white flex items-center justify-center text-sm font-bold">2</div>
              <div class="flex-1">
                <p class="text-sm font-bold text-slate-800">PAYMENT PHASE</p>
                <p class="text-xs text-slate-500">Pending verification</p>
              </div>
              <span class="text-lg font-black text-emerald-600"><%= kpis.pendingPayments %></span>
            </div>
          </div>
          
          <!-- Execution Phase -->
          <div class="relative">
            <div class="flex items-center gap-3 p-3 rounded-xl bg-indigo-50 border border-indigo-200">
              <div class="w-8 h-8 rounded-full bg-indigo-500 text-white flex items-center justify-center text-sm font-bold">3</div>
              <div class="flex-1">
                <p class="text-sm font-bold text-slate-800">EXECUTION PHASE</p>
                <p class="text-xs text-slate-500">Writer assignment ‚Üí QC</p>
              </div>
              <span class="text-lg font-black text-indigo-600"><%= kpis.writerPendingAcceptance + kpis.activeTasks %></span>
            </div>
          </div>
          
          <!-- Delivery Phase -->
          <div class="relative">
            <div class="flex items-center gap-3 p-3 rounded-xl bg-green-50 border border-green-200">
              <div class="w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center text-sm font-bold">4</div>
              <div class="flex-1">
                <p class="text-sm font-bold text-slate-800">DELIVERY PHASE</p>
                <p class="text-xs text-slate-500">Ready ‚Üí Delivered</p>
              </div>
              <span class="text-lg font-black text-green-600"><%= kpis.readyForDelivery %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- ADMIN INFO & SYSTEM STATUS -->
      <div class="space-y-6">
        <!-- System Status -->
        <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
          <div class="bg-gradient-to-r from-slate-700 to-slate-800 px-6 py-4">
            <h3 class="text-lg font-black text-white flex items-center gap-2">
              <i class="fi fi-rr-pulse"></i> System Health
            </h3>
          </div>
          <div class="p-4 space-y-3">
            <div class="flex items-center justify-between p-2 rounded-lg hover:bg-slate-50">
              <span class="text-sm text-slate-600 flex items-center gap-2"><i class="fi fi-rr-database text-slate-400"></i> Database</span>
              <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full font-bold text-xs flex items-center gap-1">
                <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span> Connected
              </span>
            </div>
            <div class="flex items-center justify-between p-2 rounded-lg hover:bg-slate-50">
              <span class="text-sm text-slate-600 flex items-center gap-2"><i class="fi fi-rr-broadcast-tower text-slate-400"></i> Real-time</span>
              <span id="socket-status" class="px-3 py-1 bg-green-100 text-green-700 rounded-full font-bold text-xs flex items-center gap-1">
                <span class="w-2 h-2 rounded-full bg-green-500"></span> Active
              </span>
            </div>
            <div class="flex items-center justify-between p-2 rounded-lg hover:bg-slate-50">
              <span class="text-sm text-slate-600 flex items-center gap-2"><i class="fi fi-rr-envelope text-slate-400"></i> Email Service</span>
              <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full font-bold text-xs">Active</span>
            </div>
            <div class="flex items-center justify-between p-2 rounded-lg hover:bg-slate-50">
              <span class="text-sm text-slate-600 flex items-center gap-2"><i class="fi fi-rr-bell text-slate-400"></i> Reminders</span>
              <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full font-bold text-xs">Running</span>
            </div>
          </div>
        </div>

        <!-- Admin Profile -->
        <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-indigo-500 to-violet-600 flex items-center justify-center text-white font-black text-xl shadow-lg">
              <%= initials %>
            </div>
            <div class="flex-1">
              <p class="font-bold text-slate-800"><%= profile.full_name %></p>
              <p class="text-xs text-slate-500"><%= profile.email %></p>
              <p class="text-xs text-indigo-600 font-semibold mt-1">Administrator ‚Ä¢ Full Access</p>
            </div>
          </div>
        </div>
      </div>

    </div>

    <!-- RECENT ACTIVITY TABLE -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
      <div class="bg-gradient-to-r from-slate-800 to-slate-900 px-6 py-4 flex items-center justify-between">
        <h3 class="text-lg font-black text-white flex items-center gap-2">
          <i class="fi fi-rr-time-past"></i> Recent Activity
        </h3>
        <a href="/admin/queries" class="text-xs text-slate-300 hover:text-white font-semibold transition-colors">
          View All ‚Üí
        </a>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-slate-50 border-b border-slate-200">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-500 uppercase tracking-wider">Order</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-500 uppercase tracking-wider">Topic</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-500 uppercase tracking-wider">Client</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-500 uppercase tracking-wider">Writer</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-500 uppercase tracking-wider">Phase</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-500 uppercase tracking-wider">Action</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% recentActivities.forEach((activity, index) => { %>
              <tr class="hover:bg-slate-50/50 transition-colors <%= activity.isOverdue ? 'bg-red-50/50' : '' %>">
                <td class="px-6 py-4">
                  <div class="flex items-center gap-2">
                    <% if (activity.isOverdue) { %>
                      <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span>
                    <% } %>
                    <span class="font-bold text-indigo-600"><%= activity.work_code || activity.query_code || 'N/A' %></span>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <p class="text-sm text-slate-700 truncate max-w-[200px]" title="<%= activity.paper_topic %>"><%= activity.paper_topic ? activity.paper_topic.substring(0, 35) + '...' : 'N/A' %></p>
                </td>
                <td class="px-6 py-4">
                  <p class="text-sm font-medium text-slate-700"><%= activity.client_name || 'N/A' %></p>
                </td>
                <td class="px-6 py-4">
                  <p class="text-sm text-slate-600"><%= activity.writer_name || '-' %></p>
                </td>
                <td class="px-6 py-4">
                  <%
                    const phaseColors = {
                      'QUERY': 'bg-amber-100 text-amber-700 border-amber-200',
                      'PAYMENT': 'bg-emerald-100 text-emerald-700 border-emerald-200',
                      'EXECUTION': 'bg-indigo-100 text-indigo-700 border-indigo-200',
                      'DELIVERY': 'bg-green-100 text-green-700 border-green-200',
                      'TERMINAL': 'bg-slate-100 text-slate-700 border-slate-200'
                    };
                    const colorClass = phaseColors[activity.lifecyclePhase] || 'bg-slate-100 text-slate-700 border-slate-200';
                  %>
                  <span class="<%= colorClass %> px-3 py-1 rounded-full text-xs font-bold border"><%= activity.statusLabel %></span>
                </td>
                <td class="px-6 py-4">
                  <span class="text-xs font-semibold text-slate-500 uppercase"><%= activity.lifecyclePhase %></span>
                </td>
                <td class="px-6 py-4">
                  <a href="/admin/queries/<%= activity.order_id %>/view" class="text-indigo-600 hover:text-indigo-800 font-bold text-sm hover:underline">
                    View ‚Üí
                  </a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</section>

<style>
  @keyframes pulse-subtle {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.85; }
  }
  .animate-pulse-subtle {
    animation: pulse-subtle 2s ease-in-out infinite;
  }
</style>

<script>
// Live clock update
function updateClock() {
  const clockEl = document.getElementById('live-clock');
  if (clockEl) {
    clockEl.textContent = new Date().toLocaleTimeString();
  }
}
setInterval(updateClock, 1000);
</script>
