<section class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-indigo-50/30 p-4 md:p-8">
  <div class="max-w-7xl mx-auto space-y-6">

    <!-- PREMIUM HEADER -->
    <div class="bg-gradient-to-r from-amber-900 via-orange-900 to-rose-900 rounded-3xl p-8 shadow-xl relative overflow-hidden">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"20\" height=\"20\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Ccircle cx=\"1\" cy=\"1\" r=\"1\" fill=\"rgba(255,255,255,0.05)\"/%3E%3C/svg%3E')]"></div>
      
      <div class="relative flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <div class="w-12 h-12 rounded-xl bg-white/10 flex items-center justify-center">
              <i class="fi fi-rr-envelope-open-text text-white text-xl"></i>
            </div>
            <h1 class="text-3xl font-black text-white">Query Management</h1>
          </div>
          <p class="text-amber-200 text-sm">Process incoming queries â€¢ Generate quotations â€¢ Track conversions</p>
        </div>

        <div class="flex gap-4">
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl px-6 py-4 border border-white/10">
            <p class="text-amber-200 text-xs font-semibold uppercase mb-1">Total</p>
            <p class="text-4xl font-black text-white"><%= total %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- FILTERS CARD -->
    <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
      <form method="GET" action="/admin/queries" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          
          <!-- Search -->
          <div>
            <label class="text-xs font-bold text-slate-600 mb-2 block uppercase tracking-wider">Search</label>
            <div class="relative">
              <i class="fi fi-rr-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"></i>
              <input 
                type="text" 
                name="search"
                value="<%= filters.search %>"
                placeholder="Code, topic, customer..."
                class="w-full pl-10 pr-4 py-2.5 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-amber-500 text-sm bg-slate-50"
              >
            </div>
          </div>

          <!-- Status Filter - Using correct status IDs 26-45 -->
          <div>
            <label class="text-xs font-bold text-slate-600 mb-2 block uppercase tracking-wider">Status</label>
            <select name="status" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-amber-500 text-sm bg-slate-50 font-medium">
              <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>ğŸ“‹ All Statuses</option>
              <option value="26" <%= filters.status === '26' ? 'selected' : '' %>>ğŸ“© Pending Query</option>
              <option value="27" <%= filters.status === '27' ? 'selected' : '' %>>ğŸ“„ Quotation Sent</option>
              <option value="28" <%= filters.status === '28' ? 'selected' : '' %>>ğŸ‘ Quote Accepted</option>
              <option value="29" <%= filters.status === '29' ? 'selected' : '' %>>ğŸ’³ Payment Submitted</option>
              <option value="30" <%= filters.status === '30' ? 'selected' : '' %>>âœ… Payment Verified</option>
              <option value="31" <%= filters.status === '31' ? 'selected' : '' %>>âœï¸ Writer Assigned</option>
              <option value="32" <%= filters.status === '32' ? 'selected' : '' %>>ğŸ“ In Progress</option>
              <option value="33" <%= filters.status === '33' ? 'selected' : '' %>>ğŸ“‹ Submitted for QC</option>
              <option value="36" <%= filters.status === '36' ? 'selected' : '' %>>âœ… Approved</option>
              <option value="38" <%= filters.status === '38' ? 'selected' : '' %>>ğŸš€ Delivered</option>
              <option value="39" <%= filters.status === '39' ? 'selected' : '' %>>ğŸ† Completed</option>
            </select>
          </div>

          <!-- Urgency Filter -->
          <div>
            <label class="text-xs font-bold text-slate-600 mb-2 block uppercase tracking-wider">Urgency</label>
            <select name="urgency" class="w-full px-4 py-2.5 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-amber-500 text-sm bg-slate-50 font-medium">
              <option value="all" <%= filters.urgency === 'all' ? 'selected' : '' %>>All Urgencies</option>
              <option value="Urgent" <%= filters.urgency === 'Urgent' ? 'selected' : '' %>>ğŸ”´ Urgent</option>
              <option value="High" <%= filters.urgency === 'High' ? 'selected' : '' %>>ğŸŸ  High</option>
              <option value="Medium" <%= filters.urgency === 'Medium' ? 'selected' : '' %>>ğŸŸ¡ Medium</option>
              <option value="Low" <%= filters.urgency === 'Low' ? 'selected' : '' %>>ğŸŸ¢ Low</option>
            </select>
          </div>

          <!-- Actions -->
          <div class="flex items-end gap-2">
            <button type="submit" class="flex-1 bg-gradient-to-r from-amber-600 to-orange-600 text-white px-6 py-2.5 rounded-xl font-bold text-sm hover:from-amber-700 hover:to-orange-700 transition-all shadow-lg shadow-amber-500/30 flex items-center justify-center gap-2">
              <i class="fi fi-rr-filter"></i>Filter
            </button>
            <a href="/admin/queries" class="bg-slate-100 text-slate-600 px-4 py-2.5 rounded-xl font-bold text-sm hover:bg-slate-200 transition-all flex items-center gap-2">
              <i class="fi fi-rr-arrow-rotate-left"></i>
            </a>
          </div>
        </div>
      </form>
    </div>

    <!-- QUERIES TABLE -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
        <span class="text-sm font-bold text-slate-700">Showing <%= queries.length %> queries</span>
        <button onclick="location.reload()" class="text-xs text-amber-600 hover:text-amber-700 font-semibold flex items-center gap-1">
          <i class="fi fi-rr-refresh"></i> Refresh
        </button>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-slate-50 border-b border-slate-200">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-600 uppercase tracking-wider">Order</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-600 uppercase tracking-wider">Customer</th>
              <th class="px-6 py-4 text-left text-xs font-black text-slate-600 uppercase tracking-wider">Topic</th>
              <th class="px-6 py-4 text-center text-xs font-black text-slate-600 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-center text-xs font-black text-slate-600 uppercase tracking-wider">Urgency</th>
              <th class="px-6 py-4 text-center text-xs font-black text-slate-600 uppercase tracking-wider">Deadline</th>
              <th class="px-6 py-4 text-center text-xs font-black text-slate-600 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% queries.forEach((query, idx) => { %>
              <%
                // Status configuration using IDs 26-45
                const statusConfigs = {
                  26: { name: 'Pending Query', bg: 'bg-amber-100', text: 'text-amber-700', icon: 'fi-rr-envelope' },
                  27: { name: 'Quotation Sent', bg: 'bg-purple-100', text: 'text-purple-700', icon: 'fi-rr-file-invoice' },
                  28: { name: 'Quote Accepted', bg: 'bg-blue-100', text: 'text-blue-700', icon: 'fi-rr-thumbs-up' },
                  29: { name: 'Payment Submitted', bg: 'bg-orange-100', text: 'text-orange-700', icon: 'fi-rr-credit-card' },
                  30: { name: 'Payment Verified', bg: 'bg-emerald-100', text: 'text-emerald-700', icon: 'fi-rr-check-circle' },
                  31: { name: 'Writer Assigned', bg: 'bg-indigo-100', text: 'text-indigo-700', icon: 'fi-rr-user-add' },
                  32: { name: 'In Progress', bg: 'bg-blue-100', text: 'text-blue-700', icon: 'fi-rr-edit' },
                  33: { name: 'Submitted for QC', bg: 'bg-violet-100', text: 'text-violet-700', icon: 'fi-rr-document-signed' },
                  34: { name: 'Under QC Review', bg: 'bg-violet-100', text: 'text-violet-700', icon: 'fi-rr-zoom-in' },
                  35: { name: 'Revision Required', bg: 'bg-rose-100', text: 'text-rose-700', icon: 'fi-rr-redo' },
                  36: { name: 'Approved', bg: 'bg-emerald-100', text: 'text-emerald-700', icon: 'fi-rr-badge-check' },
                  37: { name: 'Ready for Delivery', bg: 'bg-teal-100', text: 'text-teal-700', icon: 'fi-rr-paper-plane' },
                  38: { name: 'Delivered', bg: 'bg-green-100', text: 'text-green-700', icon: 'fi-rr-rocket-lunch' },
                  39: { name: 'Completed', bg: 'bg-green-100', text: 'text-green-700', icon: 'fi-rr-trophy' },
                  40: { name: 'Query Rejected', bg: 'bg-slate-100', text: 'text-slate-700', icon: 'fi-rr-cross-circle' },
                  41: { name: 'Quote Declined', bg: 'bg-slate-100', text: 'text-slate-700', icon: 'fi-rr-ban' },
                  42: { name: 'Payment Failed', bg: 'bg-red-100', text: 'text-red-700', icon: 'fi-rr-credit-card-alt' },
                  43: { name: 'Writer Declined', bg: 'bg-slate-100', text: 'text-slate-700', icon: 'fi-rr-user-remove' },
                  44: { name: 'QC Failed', bg: 'bg-red-100', text: 'text-red-700', icon: 'fi-rr-badge-times' },
                  45: { name: 'Cancelled', bg: 'bg-slate-100', text: 'text-slate-700', icon: 'fi-rr-cancel' }
                };
                
                const urgencyConfigs = {
                  'Urgent': { bg: 'bg-red-100', text: 'text-red-700', icon: 'fi-rr-alarm-exclamation' },
                  'High': { bg: 'bg-orange-100', text: 'text-orange-700', icon: 'fi-rr-flame' },
                  'Medium': { bg: 'bg-amber-100', text: 'text-amber-700', icon: 'fi-rr-time-quarter-past' },
                  'Low': { bg: 'bg-green-100', text: 'text-green-700', icon: 'fi-rr-leaf' }
                };
                
                const statusConfig = statusConfigs[query.status] || { name: 'Unknown', bg: 'bg-slate-100', text: 'text-slate-700', icon: 'fi-rr-question' };
                const urgencyConfig = urgencyConfigs[query.urgency] || urgencyConfigs['Medium'];
                
                // Deadline calculation
                const deadline = new Date(query.deadline_at);
                const now = new Date();
                const diffHours = Math.floor((deadline - now) / (1000 * 60 * 60));
                const isOverdue = diffHours < 0;
                const isCritical = diffHours >= 0 && diffHours < 24;
              %>
              <tr class="hover:bg-amber-50/30 transition-all group <%= isOverdue ? 'bg-red-50/30' : '' %>">
                <!-- Order Info -->
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center text-white font-bold text-xs shadow-lg shadow-amber-500/30">
                      <%= idx + 1 %>
                    </div>
                    <div>
                      <p class="font-bold text-amber-600"><%= query.query_code || query.order_id %></p>
                      <p class="text-xs text-slate-500"><%= new Date(query.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %></p>
                    </div>
                  </div>
                </td>

                <!-- Customer -->
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <div class="w-9 h-9 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white font-bold text-xs">
                      <%= query.full_name ? query.full_name.split(' ').map(n => n[0]).join('').substring(0,2).toUpperCase() : 'CL' %>
                    </div>
                    <div>
                      <p class="font-semibold text-slate-800 text-sm"><%= query.full_name %></p>
                      <p class="text-xs text-slate-500 truncate max-w-[140px]"><%= query.email %></p>
                    </div>
                  </div>
                </td>

                <!-- Topic -->
                <td class="px-6 py-4">
                  <p class="text-sm text-slate-700 truncate max-w-[200px]" title="<%= query.paper_topic %>">
                    <%= query.paper_topic ? query.paper_topic.substring(0, 40) + '...' : 'N/A' %>
                  </p>
                </td>

                <!-- Status -->
                <td class="px-6 py-4 text-center">
                  <span class="<%= statusConfig.bg %> <%= statusConfig.text %> px-3 py-1.5 rounded-full text-xs font-bold inline-flex items-center gap-1.5">
                    <i class="fi <%= statusConfig.icon %>"></i>
                    <%= statusConfig.name %>
                  </span>
                </td>

                <!-- Urgency -->
                <td class="px-6 py-4 text-center">
                  <span class="<%= urgencyConfig.bg %> <%= urgencyConfig.text %> px-3 py-1 rounded-full text-xs font-bold inline-flex items-center gap-1">
                    <i class="fi <%= urgencyConfig.icon %>"></i>
                    <%= query.urgency %>
                  </span>
                </td>

                <!-- Deadline -->
                <td class="px-6 py-4 text-center">
                  <% if (isOverdue) { %>
                    <span class="bg-red-100 text-red-700 border border-red-200 px-3 py-1 rounded-full text-xs font-bold animate-pulse inline-flex items-center gap-1">
                      <i class="fi fi-rr-alarm-exclamation"></i> OVERDUE
                    </span>
                  <% } else if (isCritical) { %>
                    <span class="bg-orange-100 text-orange-700 border border-orange-200 px-3 py-1 rounded-full text-xs font-bold inline-flex items-center gap-1">
                      <i class="fi fi-rr-clock"></i> <%= diffHours %>h left
                    </span>
                  <% } else { %>
                    <span class="text-sm text-slate-600"><%= new Date(query.deadline_at).toLocaleDateString() %></span>
                  <% } %>
                </td>

                <!-- Actions -->
                <td class="px-6 py-4">
                  <div class="flex items-center justify-center gap-2 opacity-80 group-hover:opacity-100 transition-opacity">
                    <a href="/admin/queries/<%= query.order_id %>/view" class="w-9 h-9 rounded-lg bg-blue-100 text-blue-600 hover:bg-blue-200 flex items-center justify-center transition-all" title="View Details">
                      <i class="fi fi-rr-eye"></i>
                    </a>
                    <button onclick="openWhatsApp('<%= query.whatsapp || query.mobile_number %>')" class="w-9 h-9 rounded-lg bg-green-100 text-green-600 hover:bg-green-200 flex items-center justify-center transition-all" title="WhatsApp">
                      <i class="fi fi-brands-whatsapp"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <% if (queries.length === 0) { %>
        <div class="p-12 text-center">
          <div class="w-16 h-16 rounded-full bg-slate-100 flex items-center justify-center mx-auto mb-4">
            <i class="fi fi-rr-inbox text-slate-400 text-3xl"></i>
          </div>
          <p class="text-slate-600 font-semibold">No queries found</p>
          <p class="text-sm text-slate-400 mt-1">Try adjusting your filters</p>
        </div>
      <% } %>
    </div>

    <!-- PAGINATION -->
    <% if (pages > 1) { %>
      <div class="flex justify-center items-center gap-1">
        <% for (let i = 1; i <= pages; i++) { %>
          <% if (i === page) { %>
            <span class="w-10 h-10 flex items-center justify-center rounded-lg bg-gradient-to-r from-amber-600 to-orange-600 text-white font-bold text-sm shadow-lg shadow-amber-500/30"><%= i %></span>
          <% } else { %>
            <a href="/admin/queries?page=<%= i %>&status=<%= filters.status %>&urgency=<%= filters.urgency %>&search=<%= filters.search %>" class="w-10 h-10 flex items-center justify-center rounded-lg bg-white border border-slate-200 text-slate-700 hover:bg-amber-50 hover:border-amber-200 hover:text-amber-600 font-semibold text-sm transition-all">
              <%= i %>
            </a>
          <% } %>
        <% } %>
      </div>
    <% } %>

  </div>
</section>

<script>
function openWhatsApp(phone) {
  if (!phone) {
    showToast('No phone number available', 'warning');
    return;
  }
  const cleanPhone = phone.replace(/[^0-9]/g, '');
  window.open(`https://wa.me/${cleanPhone}`, '_blank');
}
</script>
