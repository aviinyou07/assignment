<script>
// Assign Writer Modal Logic
function openAssignWriterModal() {
  document.getElementById('assign-writer-modal').classList.remove('hidden');
}
function closeAssignWriterModal() {
  document.getElementById('assign-writer-modal').classList.add('hidden');
  document.getElementById('assign-writer-form').reset();
}
document.getElementById('assign-writer-form').addEventListener('submit', async (e) => {
  e.preventDefault();
  const formData = new FormData(e.target);
  const writerId = formData.get('writerId');
  if (!writerId) {
    showToast('Please select a writer to assign', 'warning');
    return;
  }
  try {
    const response = await fetch(`/admin/query/${queryId}/assign-writer`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ writerId: parseInt(writerId) })
    });
    const result = await response.json();
    if (result.success) {
      showToast('Writer assigned successfully!', 'success');
      closeAssignWriterModal();
      location.reload();
    } else {
      showToast('Error: ' + (result.message || 'Failed to assign writer'), 'error');
    }
  } catch (error) {
    showToast('Error: ' + error.message, 'error');
  }
});
// Invite writers modal logic
function openInviteWriterModal() {
  fetch('/admin/queries/available-writers')
    .then(res => res.json())
    .then(data => {
      if (data.success && data.writers.length > 0) {
        const modalHtml = `
          <div id="invite-writer-modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
            <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md animate-in zoom-in-95 duration-200">
              <div class="p-6 border-b border-slate-200">
                <h3 class="text-xl font-black text-slate-800">Invite Writers</h3>
                <p class="text-sm text-slate-500 mt-1">Select writers to invite for this query</p>
              </div>
              <form id="invite-writer-form" class="p-6 space-y-4">
                <div>
                  <label class="text-sm font-bold text-slate-700 block mb-2">Select Writers *</label>
                  <div id="invite-writers-list" class="max-h-48 overflow-y-auto border border-slate-200 rounded-lg p-2 space-y-2">
                    ${data.writers.map(writer => `
                      <label class="flex items-center gap-3 p-2 hover:bg-slate-50 rounded-lg cursor-pointer">
                        <input type="checkbox" name="writerIds" value="${writer.user_id}" class="w-4 h-4 text-purple-600 rounded border-slate-300 focus:ring-purple-500">
                        <div class="flex-1">
                          <p class="font-semibold text-slate-800 text-sm">${writer.full_name}</p>
                          <p class="text-xs text-slate-500">${writer.email}</p>
                        </div>
                        <span class="text-xs px-2 py-1 rounded-full ${writer.is_active ? 'bg-green-100 text-green-700' : 'bg-slate-100 text-slate-500'}">
                          ${writer.is_active ? 'Active' : 'Inactive'}
                        </span>
                      </label>
                    `).join('')}
                  </div>
                </div>
                <div class="flex gap-3 pt-4">
                  <button type="button" onclick="closeInviteWriterModal()" class="flex-1 bg-slate-200 text-slate-700 px-4 py-2 rounded-lg font-bold hover:bg-slate-300 transition">Cancel</button>
                  <button type="submit" class="flex-1 bg-indigo-600 text-white px-4 py-2 rounded-lg font-bold hover:bg-indigo-700 transition">Invite Writers</button>
                </div>
              </form>
            </div>
          </div>
        `;
        document.body.insertAdjacentHTML('beforeend', modalHtml);
        document.getElementById('invite-writer-form').addEventListener('submit', async (e) => {
          e.preventDefault();
          const formData = new FormData(e.target);
          const writerIds = formData.getAll('writerIds').map(id => parseInt(id));
          console.log('Selected writerIds:', writerIds);
          if (writerIds.length === 0) {
            showToast('Please select at least one writer', 'warning');
            return;
          }
          try {
            console.log('Sending invitation request with:', { queryId, writerIds });
            const response = await fetch(`/admin/queries/${queryId}/invite-writers`, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ writerIds })
            });
            const result = await response.json();
            console.log('Response:', result);
            if (result.success) {
              showToast('Writers invited successfully!', 'success');
              closeInviteWriterModal();
              location.reload();
            } else {
              showToast('Error: ' + (result.message || 'Failed to invite writers'), 'error');
            }
          } catch (error) {
            console.error('Fetch error:', error);
            showToast('Error: ' + error.message, 'error');
          }
        });
      } else {
        showToast('No writers available to invite', 'warning');
      }
    });
}

function closeInviteWriterModal() {
  const modal = document.getElementById('invite-writer-modal');
  if (modal) modal.remove();
}
// Assign a writer from interested list
async function assignWriter(writerId) {
  try {
    const response = await fetch(`/admin/query/${queryId}/assign-writer`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ writerId })
    });
    const result = await response.json();
    if (result.success) {
      showToast('Writer assigned successfully!', 'success');
      location.reload();
    } else {
      showToast('Error: ' + (result.message || 'Failed to assign writer'), 'error');
    }
  } catch (error) {
    showToast('Error: ' + error.message, 'error');
  }
}

// Revoke writer assignment
async function revokeWriterAssignment() {
  const confirmed = await showConfirmModal(
    'Revoke Assignment',
    'Are you sure you want to revoke this writer\'s assignment? The task will need to be reassigned to another writer.',
    'danger'
  );
  
  if (!confirmed) return;
  
  try {
    const response = await fetch(`/admin/query/${queryId}/revoke-writer`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' }
    });
    const result = await response.json();
    if (result.success) {
      showToast('Writer assignment revoked. You can now invite and assign a new writer.', 'success');
      location.reload();
    } else {
      showToast('Error: ' + (result.message || 'Failed to revoke assignment'), 'error');
    }
  } catch (error) {
    showToast('Error: ' + error.message, 'error');
  }
}

const queryId = '<%= query.order_id %>';

// Status updates automatically via workflow actions - no manual update needed

// Quotation Modal
function openQuotationModal() {
  document.getElementById('quotation-modal').classList.remove('hidden');
}

function closeQuotationModal() {
  document.getElementById('quotation-modal').classList.add('hidden');
  document.getElementById('quotation-form').reset();
}

document.getElementById('quotation-form').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const formData = new FormData(e.target);
  const basePrice = parseFloat(formData.get('basePrice'));
  const urgencyCharge = parseFloat(formData.get('urgencyCharge')) || 0;
  const notes = formData.get('notes');

  if (!basePrice || basePrice <= 0) {
    showToast('Please enter a valid base price', 'warning');
    return;
  }

  try {
    const response = await fetch(`/admin/queries/${queryId}/quotation`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ queryId, basePrice, urgencyCharge, notes })
    });

    const result = await response.json();

    if (result.success) {
      showToast('Quotation generated and sent to client!', 'success');
      closeQuotationModal();
      location.reload();
    } else {
      showToast('Error: ' + (result.error || 'Failed to generate quotation'), 'error');
    }
  } catch (error) {
    showToast('Error: ' + error.message, 'error');
  }
});

// Assign Writer Modal
let availableWriters = [];

async function openAssignWriterModal() {
  document.getElementById('assign-writer-modal').classList.remove('hidden');
  
  // Fetch available writers
  try {
    const response = await fetch('/admin/queries/available-writers');
    const data = await response.json();
    
    if (data.success && data.writers.length > 0) {
      availableWriters = data.writers;
      document.getElementById('writers-list').innerHTML = data.writers.map(writer => `
        <label class="flex items-center gap-3 p-2 hover:bg-slate-50 rounded-lg cursor-pointer">
          <input type="checkbox" name="writerIds" value="${writer.user_id}" class="w-4 h-4 text-purple-600 rounded border-slate-300 focus:ring-purple-500">
          <div class="flex-1">
            <p class="font-semibold text-slate-800 text-sm">${writer.full_name}</p>
            <p class="text-xs text-slate-500">${writer.email}</p>
          </div>
          <span class="text-xs px-2 py-1 rounded-full ${writer.is_active ? 'bg-green-100 text-green-700' : 'bg-slate-100 text-slate-500'}">
            ${writer.is_active ? 'Active' : 'Inactive'}
          </span>
        </label>
      `).join('');
    } else {
      document.getElementById('writers-list').innerHTML = '<div class="text-center py-4 text-slate-500">No writers available</div>';
    }
  } catch (error) {
    document.getElementById('writers-list').innerHTML = '<div class="text-center py-4 text-red-500">Failed to load writers</div>';
  }
}

function closeAssignWriterModal() {
  document.getElementById('assign-writer-modal').classList.add('hidden');
  document.getElementById('assign-writer-form').reset();
}

document.getElementById('assign-writer-form').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const formData = new FormData(e.target);
  const writerIds = formData.getAll('writerIds').map(id => parseInt(id));
  const notes = formData.get('notes');

  if (writerIds.length === 0) {
    showToast('Please select at least one writer', 'warning');
    return;
  }

  try {
    const response = await fetch(`/admin/queries/${queryId}/assign`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ queryId, writerIds, notes })
    });

    const result = await response.json();

    if (result.success) {
      showToast(result.message || 'Writers assigned successfully!', 'success');
      closeAssignWriterModal();
      location.reload();
    } else {
      showToast('Error: ' + (result.error || 'Failed to assign writers'), 'error');
    }
  } catch (error) {
    showToast('Error: ' + error.message, 'error');
  }
});

// Message Modal
function openMessageModal() {
  document.getElementById('message-modal').classList.remove('hidden');
}

function closeMessageModal() {
  document.getElementById('message-modal').classList.add('hidden');
  document.getElementById('message-form').reset();
}

document.getElementById('message-form').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const formData = new FormData(e.target);
  const subject = formData.get('subject');
  const message = formData.get('message');

  if (!message.trim()) {
    showToast('Please enter a message', 'warning');
    return;
  }

  try {
    const response = await fetch(`/admin/queries/${queryId}/message`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ 
        userId: '<%= query.user_id %>', 
        subject, 
        message 
      })
    });

    const result = await response.json();

    if (result.success) {
      showToast('Message sent successfully!', 'success');
      closeMessageModal();
    } else {
      showToast('Error: ' + (result.error || 'Failed to send message'), 'error');
    }
  } catch (error) {
    showToast('Error: ' + error.message, 'error');
  }
});

// Close modals on outside click
document.querySelectorAll('#quotation-modal, #assign-writer-modal, #message-modal').forEach(modal => {
  modal.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.add('hidden');
    }
  });
});

// Close modals on Escape key
document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape') {
    document.querySelectorAll('#quotation-modal, #assign-writer-modal, #message-modal').forEach(modal => {
      modal.classList.add('hidden');
    });
  }
});
</script>
