<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8 flex justify-between items-center">
      <div>
        <a href="/admin/assignments" class="text-indigo-600 hover:text-indigo-900 flex items-center mb-2">
          <span class="mr-2">←</span> Back to Assignments
        </a>
        <h1 class="text-3xl font-bold text-gray-900">Work Code: <%= workCode %></h1>
        <p class="mt-2 text-gray-600"><%= topic %></p>
      </div>
    </div>

    <!-- Assignments Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
      <div class="px-6 py-4 border-b">
        <h2 class="text-lg font-bold">Assigned Writers</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 border-b">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Writer</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Submissions</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Assigned</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Deadline</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% assignments.forEach(assignment => { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="font-medium"><%= assignment.writer_name %></div>
                <div class="text-sm text-gray-600"><%= assignment.email %></div>
              </td>
              <td class="px-6 py-4">
                <% if (assignment.status === 'assigned') { %>
                  <span class="inline-block bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded">Assigned (Pending)</span>
                <% } else if (assignment.status === 'accepted') { %>
                  <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">Accepted</span>
                <% } else if (assignment.status === 'rejected') { %>
                  <span class="inline-block bg-red-100 text-red-800 text-xs px-2 py-1 rounded">Rejected</span>
                <% } else if (assignment.status === 'reassigned') { %>
                  <span class="inline-block bg-orange-100 text-orange-800 text-xs px-2 py-1 rounded">Reassigned</span>
                <% } %>
              </td>
              <td class="px-6 py-4"><%= assignment.submission_count %> submitted</td>
              <td class="px-6 py-4"><%= new Date(assignment.assigned_at).toLocaleDateString() %></td>
              <td class="px-6 py-4">
                <% if (assignment.acceptance_deadline) { %>
                  <%= new Date(assignment.acceptance_deadline).toLocaleDateString() %>
                <% } %>
              </td>
              <td class="px-6 py-4">
                <% if (assignment.status === 'rejected' || assignment.status === 'reassigned') { %>
                  <button onclick="reassignWriter(<%= assignment.id %>)" class="text-indigo-600 hover:text-indigo-900 text-sm mr-3">
                    Reassign
                  </button>
                <% } %>
                <button onclick="viewAssignmentDetails(<%= assignment.id %>)" class="text-indigo-600 hover:text-indigo-900 text-sm">
                  Details
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Submissions Summary -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Draft Submissions -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-bold mb-4">Submissions Received</h3>
        <div class="space-y-3 max-h-64 overflow-y-auto">
          <p class="text-gray-600">Draft submissions and quality metrics will appear here</p>
        </div>
      </div>

      <!-- Assignment Notes -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-bold mb-4">Assignment Details</h3>
        <div class="space-y-3">
          <p><strong>Work Code:</strong> <%= workCode %></p>
          <p><strong>Total Assignments:</strong> <%= assignments.length %></p>
          <p><strong>Accepted:</strong> <span class="text-blue-600"><%= assignments.filter(a => a.status === 'accepted').length %></span></p>
          <p><strong>Pending:</strong> <span class="text-yellow-600"><%= assignments.filter(a => a.status === 'assigned').length %></span></p>
          <p><strong>Rejected:</strong> <span class="text-red-600"><%= assignments.filter(a => a.status === 'rejected').length %></span></p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Reassign Modal -->
<div id="reassignModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
  <div class="bg-white rounded-lg shadow-lg max-w-2xl w-full mx-4">
    <div class="border-b px-6 py-4 flex justify-between items-center">
      <h2 class="text-xl font-bold">Reassign to Another Writer</h2>
      <button onclick="closeReassignModal()" class="text-gray-500 hover:text-gray-700">✕</button>
    </div>

    <form id="reassignForm" class="p-6 space-y-4">
      <input type="hidden" id="reassignTaskId">
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Select New Writer</label>
        <select id="newWriterId" class="w-full border rounded px-3 py-2" required>
          <option value="">-- Choose Writer --</option>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Reason for Reassignment</label>
        <textarea id="reassignNotes" class="w-full border rounded px-3 py-2 h-20" placeholder="Explain why reassigning..." required></textarea>
      </div>

      <div class="flex justify-end space-x-3 pt-4 border-t">
        <button type="button" onclick="closeReassignModal()" class="px-4 py-2 text-gray-700 border rounded hover:bg-gray-50">
          Cancel
        </button>
        <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">
          Reassign Writer
        </button>
      </div>
    </form>
  </div>
</div>

<script>
function reassignWriter(taskId) {
  document.getElementById('reassignTaskId').value = taskId;
  document.getElementById('reassignModal').classList.remove('hidden');
  loadAvailableWritersForReassign();
}

function closeReassignModal() {
  document.getElementById('reassignModal').classList.add('hidden');
}

async function loadAvailableWritersForReassign() {
  try {
    const response = await fetch('/admin/assignments/available-writers');
    const data = await response.json();
    
    const select = document.getElementById('newWriterId');
    select.innerHTML = '<option value="">-- Choose Writer --</option>' + 
      data.writers.map(writer => `
        <option value="${writer.id}">${writer.name} (${writer.email})</option>
      `).join('');
  } catch (error) {
    console.error('Error loading writers:', error);
  }
}

document.getElementById('reassignForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const taskId = document.getElementById('reassignTaskId').value;
  const newWriterId = document.getElementById('newWriterId').value;
  const notes = document.getElementById('reassignNotes').value;

  try {
    const response = await fetch(`/admin/assignments/${taskId}/reassign`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        newWriterId: parseInt(newWriterId),
        notes
      })
    });

    const data = await response.json();
    if (data.success) {
      showToast('Writer reassigned successfully!', 'success');
      closeReassignModal();
      location.reload();
    } else {
      showToast('Error: ' + data.error, 'error');
    }
  } catch (error) {
    console.error('Error reassigning writer:', error);
    showToast('An error occurred', 'error');
  }
});

function viewAssignmentDetails(taskEvalId) {
  // Show details of this specific assignment and its submissions
  window.location.href = `/admin/assignments/detail/${taskEvalId}`;
}
</script>
