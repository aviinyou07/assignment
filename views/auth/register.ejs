<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | A366</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="https://cdn-uicons.flaticon.com/2.1.0/uicons-regular-rounded/css/uicons-regular-rounded.css">
</head>
<body class="bg-slate-50 min-h-screen flex items-center justify-center p-4">

    <div class="max-w-md w-full bg-white rounded-3xl shadow-xl overflow-hidden border border-slate-100">
        
        <div class="p-8">
            <div class="text-center mb-10">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-600 rounded-2xl mb-4 shadow-lg shadow-indigo-200">
                    <span class="text-white text-3xl font-black">A</span>
                </div>
                <h1 class="text-2xl font-black text-slate-800">Join A366</h1>
                <p class="text-slate-500 mt-2">Enter your WhatsApp number to get started</p>
            </div>

            <!-- STEP 1: Phone & Name -->
            <div id="step-1" class="space-y-6">
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">WhatsApp Number (with country code)</label>
                    <div class="relative">
                        <i class="fi fi-rr-phone-call absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                        <input type="text" id="whatsapp" placeholder="+91 00000 00000" 
                               class="w-full pl-12 pr-4 py-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none font-medium">
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Full Name</label>
                    <div class="relative">
                        <i class="fi fi-rr-user absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                        <input type="text" id="full_name" placeholder="John Doe" 
                               class="w-full pl-12 pr-4 py-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none font-medium">
                    </div>
                </div>

                <button onclick="sendOtp()" id="send-otp-btn"
                        class="w-full py-4 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-2xl shadow-lg shadow-indigo-200 transition-all transform hover:scale-[1.02] active:scale-[0.98]">
                    Send OTP to WhatsApp
                </button>
            </div>

            <!-- STEP 2: OTP Verification -->
            <div id="step-2" class="hidden space-y-6">
                <div class="text-center">
                    <p class="text-sm text-slate-600 mb-4">OTP sent to <span id="display-whatsapp" class="font-bold"></span></p>
                </div>
                
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Verification Code</label>
                    <input type="text" id="otp" placeholder="123456" maxlength="6"
                           class="w-full px-4 py-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all outline-none text-center text-3xl font-black tracking-[0.5em]">
                </div>

                <button onclick="verifyOtp()" id="verify-otp-btn"
                        class="w-full py-4 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-2xl shadow-lg shadow-indigo-200 transition-all transform hover:scale-[1.02] active:scale-[0.98]">
                    Verify & Create Account
                </button>

                <button onclick="showStep1()" class="w-full text-slate-500 text-sm font-medium hover:text-indigo-600 transition">
                    Change WhatsApp Number
                </button>
            </div>

            <div id="error-msg" class="hidden mt-4 p-4 bg-red-50 text-red-600 text-sm rounded-xl border border-red-100 font-medium"></div>
        </div>

        <div class="p-6 bg-slate-50 border-t border-slate-100 text-center">
            <p class="text-slate-600 text-sm">Already have an account? <a href="/login" class="text-indigo-600 font-bold hover:underline">Login</a></p>
        </div>
    </div>

    <script>
        function showStep1() {
            document.getElementById('step-1').classList.remove('hidden');
            document.getElementById('step-2').classList.add('hidden');
            document.getElementById('error-msg').classList.add('hidden');
        }

        async function sendOtp() {
            const whatsapp = document.getElementById('whatsapp').value;
            const full_name = document.getElementById('full_name').value;
            const btn = document.getElementById('send-otp-btn');
            const errorMsg = document.getElementById('error-msg');

            if (!whatsapp || !full_name) {
                errorMsg.innerText = 'Name and WhatsApp number are required';
                errorMsg.classList.remove('hidden');
                return;
            }

            btn.disabled = true;
            btn.innerText = 'Sending...';
            errorMsg.classList.add('hidden');

            try {
                const response = await fetch('/auth/register/send-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ whatsapp })
                });

                const data = await response.json();
                if (data.success) {
                    document.getElementById('display-whatsapp').innerText = whatsapp;
                    document.getElementById('step-1').classList.add('hidden');
                    document.getElementById('step-2').classList.remove('hidden');
                } else {
                    errorMsg.innerText = data.message || 'Failed to send OTP';
                    errorMsg.classList.remove('hidden');
                }
            } catch (err) {
                errorMsg.innerText = 'Connection error';
                errorMsg.classList.remove('hidden');
            } finally {
                btn.disabled = false;
                btn.innerText = 'Send OTP to WhatsApp';
            }
        }

        async function verifyOtp() {
            const whatsapp = document.getElementById('whatsapp').value;
            const full_name = document.getElementById('full_name').value;
            const otp = document.getElementById('otp').value;
            const btn = document.getElementById('verify-otp-btn');
            const errorMsg = document.getElementById('error-msg');

            if (!otp) {
                errorMsg.innerText = 'OTP is required';
                errorMsg.classList.remove('hidden');
                return;
            }

            btn.disabled = true;
            btn.innerText = 'Verifying...';
            errorMsg.classList.add('hidden');

            try {
                const response = await fetch('/auth/register/verify-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ whatsapp, full_name, otp })
                });

                const data = await response.json();
                if (data.success) {
                    alert('Registration successful! Please login.');
                    window.location.href = '/login';
                } else {
                    errorMsg.innerText = data.message || 'OTP verification failed';
                    errorMsg.classList.remove('hidden');
                }
            } catch (err) {
                errorMsg.innerText = 'Connection error';
                errorMsg.classList.remove('hidden');
            } finally {
                btn.disabled = false;
                btn.innerText = 'Verify & Create Account';
            }
        }
    </script>
</body>
</html>
