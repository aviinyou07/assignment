<div class="space-y-6 animate-in fade-in slide-in-from-bottom-4 duration-700">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="md:col-span-2 bg-white p-6 rounded-[2rem] border border-slate-200 shadow-sm flex items-center justify-between">
            <div>
                <h2 class="text-2xl font-black text-slate-800 tracking-tight">Project Updates</h2>
                <p class="text-sm text-slate-500 font-medium italic">Communicate daily milestones to BDE & Admin</p>
            </div>
            <div class="hidden md:block">
                <i class="fi fi-rr-refresh text-4xl text-indigo-100"></i>
            </div>
        </div>
        
        <div class="bg-indigo-600 p-6 rounded-[2rem] shadow-xl shadow-indigo-100 text-white flex flex-col justify-center">
            <p class="text-[10px] font-black uppercase tracking-widest opacity-80">Total Updates Sent</p>
            <p class="text-3xl font-black"><%= totalUpdates %></p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-1 space-y-6">
            <div class="bg-white p-8 rounded-[2.5rem] border border-slate-200 shadow-sm sticky top-24">
                <h3 class="text-lg font-black text-slate-800 mb-6 flex items-center gap-2">
                    <i class="fi fi-rr-paper-plane text-indigo-600"></i> New Milestone
                </h3>

                <form id="progress-form" class="space-y-5" onsubmit="submitProgress(event)">
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-2">Active Work Code</label>
                        <select id="update-order-id" class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-4 text-sm font-bold text-slate-700 outline-none focus:ring-2 focus:ring-indigo-500 transition-all">
                            <% activeOrders.forEach(order => { %>
                                <option value="<%= order.order_id %>"><%= order.work_code || order.order_id %> - <%= order.paper_topic.substring(0, 20) %>...</option>
                            <% }) %>
                            <% if(activeOrders.length === 0) { %>
                                <option disabled selected>No active tasks</option>
                            <% } %>
                        </select>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-2">Current Status</label>
                        <select id="update-status" class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-4 text-sm font-bold text-indigo-600 outline-none focus:ring-2 focus:ring-indigo-500 transition-all">
                            <option value="in_progress">Task Started</option>
                            <option value="research_completed">Research Done</option>
                            <option value="writing_started" selected>Writing Started</option>
                            <option value="rework_in_progress">Rework</option>
                        </select>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-2">Words Completed So Far</label>
                        <div class="relative">
                            <input type="number" id="update-words" placeholder="e.g. 1500" class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-4 text-sm font-bold outline-none focus:ring-2 focus:ring-indigo-500">
                            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-[10px] font-bold text-slate-400 uppercase">Words</span>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-2">Brief Progress Note</label>
                        <textarea id="update-notes" rows="3" class="w-full bg-slate-50 border border-slate-200 rounded-2xl p-4 text-sm font-medium focus:ring-2 focus:ring-indigo-500 outline-none" placeholder="Explain what has been done..."></textarea>
                    </div>

                    <button type="submit" class="w-full bg-slate-900 text-white py-4 rounded-2xl font-black text-sm shadow-xl shadow-slate-200 hover:bg-indigo-600 transition-all flex items-center justify-center gap-3">
                        <i class="fi fi-rr-cloud-upload"></i>
                        Push Progress Log
                    </button>
                </form>
            </div>
        </div>

        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-sm overflow-hidden">
                <div class="p-6 border-b border-slate-100 flex justify-between items-center bg-slate-50/50">
                    <h3 class="font-black text-slate-800 flex items-center gap-2">
                        <i class="fi fi-rr-list-check text-indigo-600"></i>
                        Recent Sync History
                    </h3>
                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-tighter italic">Auto-Synced with Admin Panel</span>
                </div>

                <div class="divide-y divide-slate-50">
                    <% if(updates.length > 0) { %>
                        <% updates.forEach(log => { %>
                            <div class="p-6 hover:bg-slate-50/50 transition-colors">
                                <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                    <div class="flex gap-4">
                                        <div class="flex flex-col items-center">
                                            <div class="w-2 h-2 rounded-full bg-indigo-500 mb-1"></div>
                                            <div class="w-px h-full bg-slate-200"></div>
                                        </div>
                                        <div>
                                            <p class="text-sm font-black text-slate-800"><%= log.action || log.event_type %></p>
                                            <p class="text-xs text-slate-500 mt-1 font-medium italic">"<%= log.details %>"</p>
                                            <div class="flex items-center gap-3 mt-3">
                                                <span class="text-[10px] font-bold text-indigo-500 bg-indigo-50 px-2 py-0.5 rounded-lg uppercase">#<%= log.work_code || log.resource_id %></span>
                                                <span class="text-[10px] font-bold text-slate-400 uppercase">Topic: <%= log.paper_topic %></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-xs font-bold text-slate-400">
                                        <%= new Date(log.created_at).toLocaleString() %>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="p-12 text-center text-slate-400">
                            No recent updates found.
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    async function submitProgress(e) {
        e.preventDefault();
        
        const orderId = document.getElementById('update-order-id').value;
        if(!orderId) {
            showToast('No active task selected', 'error');
            return;
        }

        const status = document.getElementById('update-status').value;
        const words = document.getElementById('update-words').value;
        const notes = document.getElementById('update-notes').value;
        
        const fullNote = (words ? `[Words: ${words}] ` : '') + (notes || '');
        
        try {
            const res = await fetch(`/writer/tasks/${orderId}/status`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    newStatus: status,
                    notes: fullNote
                })
            });
            const data = await res.json();
            
            if(data.success) {
                showToast('Progress Logged Successfully!', 'success');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                showToast(data.error || 'Failed', 'error');
            }
        } catch(err) {
            console.error(err);
            showToast('Submission error', 'error');
        }
    }
</script>
                        <div class="flex gap-4">
                            <div class="flex flex-col items-center">
                                <div class="w-2 h-2 rounded-full bg-amber-500 mb-1"></div>
                                <div class="w-px h-full bg-slate-200"></div>
                            </div>
                            <div>
                                <p class="text-sm font-black text-slate-800">Task Initiated</p>
                                <p class="text-xs text-slate-500 mt-1 font-medium italic">"Writer accepted the query and started working on the project outline."</p>
                                <div class="flex items-center gap-3 mt-3">
                                    <span class="text-[10px] font-bold text-amber-500 bg-amber-50 px-2 py-0.5 rounded-lg uppercase">#JD20250102</span>
                                    <span class="text-[10px] font-bold text-slate-400 uppercase">09:15 AM</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="p-6 bg-slate-50/80 border-t border-slate-100 text-center">
                    <button class="text-xs font-bold text-indigo-600 hover:text-indigo-800 transition-colors uppercase tracking-widest">Load More History</button>
                </div>
            </div>
        </div>
    </div>
</div>