<!-- WRITER CHAT HUB -->
<section class="space-y-6">
  <!-- Header -->
  <div class="bg-gradient-to-r from-purple-600 to-violet-600 rounded-2xl p-6 text-white shadow-lg">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
      <div>
        <h1 class="text-2xl font-black">Admin Chats</h1>
        <p class="text-purple-100 text-sm mt-1">Communicate with admin for support and queries</p>
      </div>
      <div class="flex gap-3">
        <button id="request-admin-btn" class="px-4 py-2 bg-white/15 hover:bg-white/25 text-white font-semibold rounded-xl text-sm transition flex items-center gap-2">
          <i class="fi fi-rr-user-plus"></i> Request Admin Chat
        </button>
        <button id="refresh-btn" class="px-4 py-2 bg-white/15 hover:bg-white/25 text-white font-semibold rounded-xl text-sm transition flex items-center gap-2">
          <i class="fi fi-rr-rotate-right"></i> Refresh
        </button>
      </div>
    </div>
  </div>

  <!-- Main Panel -->
  <div class="bg-white rounded-2xl border border-slate-200 shadow-sm">
    <!-- Header -->
    <div class="border-b border-slate-100 flex items-center justify-between px-6 py-4">
      <span class="px-4 py-2 rounded-lg font-semibold text-sm bg-purple-100 text-purple-700">
        <i class="fi fi-rr-shield mr-1"></i>Admin Chats Only
      </span>
      
      <input id="search-input" type="text" placeholder="Search..." class="px-4 py-2 text-sm border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 w-64">
    </div>

    <!-- Chat List -->
    <div class="p-6">
      <div id="writer-chat-list" class="grid gap-4 sm:grid-cols-2 xl:grid-cols-3">
        <div class="col-span-full text-center py-10 text-slate-400">
          <i class="fi fi-rr-spinner-alt animate-spin text-2xl mb-2 block"></i>
          Loading...
        </div>
      </div>
    </div>
  </div>
</section>

<script>
(function() {
  let chats = [];
  let search = '';

  document.addEventListener('DOMContentLoaded', init);

  function init() {
    bindEvents();
    loadChats();
  }

  function bindEvents() {
    // Search
    document.getElementById('search-input').addEventListener('input', e => {
      search = e.target.value.toLowerCase();
      render();
    });

    // Refresh
    document.getElementById('refresh-btn').addEventListener('click', loadChats);

    // Request Admin Chat
    document.getElementById('request-admin-btn').addEventListener('click', requestAdminChat);
  }

  async function loadChats() {
    const container = document.getElementById('writer-chat-list');
    container.innerHTML = `<div class="col-span-full text-center py-10 text-slate-400"><i class="fi fi-rr-spinner-alt animate-spin text-2xl mb-2 block"></i>Loading...</div>`;
    
    try {
      const res = await fetch('/chat/my-conversations', { credentials: 'include' });
      const data = await res.json();
      
      if (data.success) {
        chats = data.data || [];
        render();
      } else {
        showError();
      }
    } catch (err) {
      console.error('Error loading chats:', err);
      showError();
    }
  }

  function render() {
    const container = document.getElementById('writer-chat-list');
    
    // Writers only see admin chats - already filtered by backend
    let filtered = chats.filter(c => {
      if (!search) return true;
      const hay = `${c.display_name || ''} ${c.title || ''} ${c.last_message || ''}`.toLowerCase();
      return hay.includes(search);
    });
    
    if (!filtered.length) {
      container.innerHTML = emptyHtml();
      return;
    }
    
    container.innerHTML = filtered.map(renderCard).join('');
  }

  function renderCard(chat) {
    const initials = (chat.display_name || 'A').split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
    const lastTime = chat.last_message_at ? formatTime(chat.last_message_at) : 'No messages';
    
    return `
      <div class="border border-slate-200 rounded-xl p-4 hover:shadow-md hover:border-purple-200 transition relative">
        ${chat.unread_count > 0 ? `<span class="absolute -top-2 -right-2 bg-purple-500 text-white text-[10px] font-bold rounded-full min-w-[20px] h-5 px-2 flex items-center justify-center">${chat.unread_count}</span>` : ''}
        
        <div class="flex items-center gap-3 mb-3">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-purple-500 to-violet-600 text-white flex items-center justify-center font-bold text-sm">
            ${esc(initials)}
          </div>
          <div class="min-w-0 flex-1">
            <p class="font-bold text-slate-800 truncate">${esc(chat.display_name || chat.title || 'Admin Chat')}</p>
            <p class="text-xs text-purple-600 font-semibold">Admin</p>
          </div>
        </div>
        
        <p class="text-sm text-slate-600 line-clamp-2 mb-3">${esc(chat.last_message || 'No messages yet')}</p>
        
        <div class="flex items-center justify-between text-xs text-slate-400 mb-3">
          <span>${lastTime}</span>
          <span>${chat.message_count || 0} msgs</span>
        </div>
        
        <button class="w-full bg-purple-600 text-white px-3 py-2 rounded-lg font-semibold text-sm hover:bg-purple-700 transition"
          onclick="openChat('${chat.context_code}', '${escAttr(chat.display_name || chat.title)}')">
          <i class="fi fi-rr-comment-dots mr-1"></i>View & Reply
        </button>
      </div>
    `;
  }

  window.openChat = function(contextCode, title) {
    if (typeof openGlobalChat === 'function') {
      openGlobalChat();
      setTimeout(() => {
        if (typeof openConversation === 'function') {
          openConversation(contextCode, title);
        }
      }, 300);
    } else {
      showToast('Chat panel not available', 'error');
    }
  };

  async function requestAdminChat() {
    try {
      const res = await fetch('/chat/request', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ requestType: 'admin' }),
        credentials: 'include'
      });
      const data = await res.json();
      
      if (data.success) {
        showToast('Chat request sent to admin', 'success');
      } else {
        showToast(data.message || 'Failed to send request', 'error');
      }
    } catch (err) {
      showToast('Error sending request', 'error');
    }
  }

  function emptyHtml() {
    return `
      <div class="col-span-full text-center py-10 text-slate-400">
        <i class="fi fi-rr-comment text-3xl mb-2 block"></i>
        <p class="font-semibold">No admin chats yet</p>
        <p class="text-sm mt-1">Request a chat with admin to get started</p>
        <button onclick="document.getElementById('request-admin-btn').click()" class="mt-4 px-4 py-2 bg-purple-600 text-white rounded-lg text-sm font-semibold">
          Request Admin Chat
        </button>
      </div>
    `;
  }

  function showError() {
    document.getElementById('writer-chat-list').innerHTML = `
      <div class="col-span-full text-center py-10 text-red-400">
        <i class="fi fi-rr-exclamation text-3xl mb-2 block"></i>
        <p class="font-semibold">Failed to load chats</p>
        <button onclick="loadChats()" class="mt-2 px-4 py-2 bg-red-100 text-red-600 rounded-lg text-sm">Retry</button>
      </div>
    `;
  }

  function esc(str) {
    const div = document.createElement('div');
    div.textContent = str || '';
    return div.innerHTML;
  }

  function escAttr(str) {
    return (str || '').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
  }

  function formatTime(dateStr) {
    const diff = Date.now() - new Date(dateStr).getTime();
    const m = Math.floor(diff / 60000);
    if (m < 1) return 'now';
    if (m < 60) return `${m}m`;
    const h = Math.floor(m / 60);
    if (h < 24) return `${h}h`;
    return `${Math.floor(h / 24)}d`;
  }

  function showToast(msg, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `fixed top-4 right-4 z-50 px-4 py-2 rounded-lg text-white text-sm font-semibold shadow-lg ${
      type === 'success' ? 'bg-green-500' : type === 'error' ? 'bg-red-500' : 'bg-blue-500'
    }`;
    toast.textContent = msg;
    document.body.appendChild(toast);
    setTimeout(() => toast.remove(), 3000);
  }
})();
</script>

<style>
#writer-chat-list { min-height: 200px; }
</style>
